{
  "number": 71,
  "name": "سُورَةُ نُوحٍ",
  "englishName": "Nooh",
  "ayahs": [
    {
      "number": 1,
      "text": "اِ[g[ن]َّ[o[ا]ۤ اَرْسَلْنَا نُوْحًا اِلٰی قَوْمِهٖۤ اَنْ اَ[f:13946[ن]ْ[f:13946[ذ]ِرْ قَوْمَكَ مِ[f:1346[ن]ْ [f:1346[ق]َ[q:1347[ب]ْلِ اَ[a:4887[ن]ْ [a:4887[ی]َّاْتِیَهُمْ عَذَابٌ اَلِ[p[ی]ْمٌ ۟",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 2,
      "text": "قَالَ یٰقَوْمِ اِ[g[ن]ِّیْ لَكُمْ نَذِیْ[a:5164[ر]ٌ [a:5164[م]ُّبِ[p[ی]ْنٌ ۟ۙ",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اَنِ [h:3899[ا]عْبُدُو[s[ا] [h:3704[ا]للّٰهَ وَ[h:4181[ا]تَّقُوْهُ وَاَطِیْعُ[p[و]ْنِ ۟ۙ",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 4,
      "text": "یَغْفِرْ لَكُ[w:556[م]ْ [w:556[م]ِّ[f:7063[ن]ْ [f:7063[ذ]ُنُوْبِكُمْ وَیُؤَخِّرْكُمْ اِلٰۤ[o[ی] اَجَ[a:1657[ل]ٍ [a:1657[م]ُّسَ[g[م]ًّی ؕ اِ[g[ن]َّ اَجَلَ [h:10285[ا]للّٰهِ اِذَا جَ[o[ا]ٓءَ لَا یُؤَخَّرُ ۘ لَوْ كُ[f:100[ن]ْ[f:100[ت]ُمْ تَعْلَمُ[p[و]ْنَ ۟",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 5,
      "text": "قَالَ رَبِّ اِ[g[ن]ِّیْ دَعَوْتُ قَوْمِیْ لَیْلً[a:13947[ا] [a:13947[و]َّنَهَارًا ۟ۙ",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 6,
      "text": "فَلَمْ یَزِ[q:13948[د]ْهُمْ دُعَ[o[ا]ٓءِ[o[ی]ْۤ اِلَّا فِرَارًا ۟",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 7,
      "text": "وَاِ[g[ن]ِّیْ كُلَّمَا دَعَوْتُهُمْ لِتَغْفِرَ لَهُمْ جَعَلُ[o[و]ْۤ[s[ا] اَصَابِعَهُمْ فِیْۤ اٰذَانِهِمْ وَ[s[ا]سْتَغْشَوْ[s[ا] ثِیَ[h:13950[ا]بَهُمْ وَاَصَرُّوْا وَاسْتَكْبَرُوا اسْتِكْبَارًا ۟ۚ",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 8,
      "text": "ثُ[g[م]َّ اِ[g[ن]ِّیْ دَعَوْتُهُمْ جِهَارًا ۟ۙ",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 9,
      "text": "ثُ[g[م]َّ اِ[g[ن]ِّ[o[ی]ْۤ اَعْلَ[f:13951[ن]ْ[f:13951[ت]ُ لَهُمْ وَاَسْرَرْتُ لَهُمْ اِسْرَارًا ۟ۙ",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 10,
      "text": "فَقُلْتُ [h:13952[ا]سْتَغْفِرُوْ[s[ا] رَبَّكُمْ ؕ اِ[g[ن]َّهٗ كَانَ غَفَّارًا ۟ۙ",
      "juz": 29,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 11,
      "text": "یُّرْسِلِ [h:6377[ا][l[ل]سَّمَ[o[ا]ٓءَ عَلَیْكُ[w:6378[م]ْ [w:6378[م]ِّ[q:3932[د]ْرَارًا ۟ۙ",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 12,
      "text": "وَّیُمْدِ[q:13953[د]ْكُ[c:13954[م]ْ [c:13954[ب]ِاَمْوَ[n[ا][a:7671[ل]ٍ [a:7671[و]َّبَنِیْنَ وَیَ[q:9574[ج]ْعَلْ لَّكُمْ جَ[g[ن]ّٰ[a:13955[ت]ٍ [a:13955[و]َّیَ[q:9574[ج]ْعَلْ لَّكُمْ اَنْهٰرًا ۟ؕ",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 13,
      "text": "مَا لَكُمْ لَا تَرْجُوْنَ لِلّٰهِ وَقَارًا ۟ۚ",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 14,
      "text": "وَقَ[q:387[د]ْ خَلَقَكُمْ اَ[q:13956[ط]ْوَارًا ۟",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 15,
      "text": "اَلَمْ تَرَوْ[s[ا] كَیْفَ خَلَقَ [h:1272[ا]للّٰهُ سَ[q:158[ب]ْعَ سَمٰوٰ[f:13760[ت]ٍ [f:13760[ط]ِبَاقًا ۟ۙ",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 16,
      "text": "وَّجَعَلَ [h:13957[ا]لْقَمَرَ فِیْهِ[g[ن]َّ نُوْ[a:13958[ر]ً[a:13958[ا] [a:13958[و]َّجَعَلَ [h:13959[ا][l[ل]شَّمْسَ سِرَاجًا ۟",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 17,
      "text": "وَ[h:9999[ا]للّٰهُ اَ[i:13960[ن]ْۢ[i:13960[ب]َتَكُ[w:13961[م]ْ [w:13961[م]ِّنَ [h:1579[ا]لْاَرْضِ نَبَاتًا ۟ۙ",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 18,
      "text": "ثُ[g[م]َّ یُعِیْدُكُمْ فِیْهَا وَیُخْرِجُكُمْ اِخْرَاجًا ۟",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 19,
      "text": "وَ[h:9999[ا]للّٰهُ جَعَلَ لَكُمُ [h:87[ا]لْاَرْضَ بِسَاطًا ۟ۙ",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 20,
      "text": "لِّتَسْلُكُوْ[s[ا] مِنْهَا سُبُلً[f:13962[ا] [f:13962[ف]ِجَاجًا ۟۠",
      "juz": 29,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 21,
      "text": "قَالَ نُوْ[u:13963[ح]ٌ [u:13963[ر]َّبِّ اِ[g[ن]َّهُمْ عَصَوْنِیْ وَ[h:2433[ا]تَّبَعُوْ[s[ا] مَ[u:11941[ن]ْ [u:11941[ل]َّمْ یَزِ[q:13964[د]ْهُ مَالُهٗ وَوَلَدُهٗۤ اِلَّا خَسَارًا ۟ۚ",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 22,
      "text": "وَمَكَرُوْ[s[ا] مَكْ[f:13965[ر]ً[f:13965[ا] [f:13965[ك]ُبَّارًا ۟ۚ",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 23,
      "text": "وَقَالُوْ[s[ا] لَا تَذَرُ[g[ن]َّ اٰلِهَتَكُمْ وَلَا تَذَرُ[g[ن]َّ وَدًّ[a:13966[ا] [a:13966[و]َّلَا سُوَا[a:13967[ع]ً[a:13967[ا] ۙ۬ [a:13967[و]َّلَا یَغُوْثَ وَیَعُوْقَ وَنَسْرًا ۟ۚ",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 24,
      "text": "وَقَ[q:387[د]ْ اَضَلُّوْ[s[ا] كَثِیْ[a:13968[ر]ً[a:13968[ا] ۚ۬ [a:13968[و]َلَا تَزِدِ [h:13969[ا][l[ل]ظّٰلِمِیْنَ اِلَّا ضَلٰلًا ۟",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 25,
      "text": "مِ[g[م]َّا خَطِ[o[ی]ْٓـٰٔتِهِمْ اُغْرِقُوْ[s[ا] فَاُ[q:13970[د]ْخِلُوْ[s[ا] نَا[f:13971[ر]ً[f:13971[ا] ۙ۬ [f:13971[ف]َلَمْ یَجِدُوْ[s[ا] لَهُ[w:1812[م]ْ [w:1812[م]ِّ[f:107[ن]ْ [f:107[د]ُوْنِ [h:108[ا]للّٰهِ اَ[f:13972[ن]ْ[f:13972[ص]َارًا ۟",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 26,
      "text": "وَقَالَ نُوْ[u:13963[ح]ٌ [u:13963[ر]َّبِّ لَا تَذَرْ عَلَی [h:7958[ا]لْاَرْضِ مِنَ [h:182[ا]لْكٰفِرِیْنَ دَیَّارًا ۟",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اِ[g[ن]َّكَ اِ[f:13973[ن]ْ [f:13973[ت]َذَرْهُمْ یُضِلُّوْ[s[ا] عِبَادَكَ وَلَا یَلِدُ[o[و]ْۤ[s[ا] اِلَّا فَاجِ[f:13974[ر]ً[f:13974[ا] [f:13974[ك]َفَّارًا ۟",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 28,
      "text": "رَبِّ [h:5032[ا]غْفِرْ لِیْ وَلِوَ[n[ا]لِدَیَّ وَلِمَ[f:13975[ن]ْ [f:13975[د]َخَلَ بَیْتِیَ مُؤْمِ[a:13976[ن]ً[a:13976[ا] [a:13976[و]َّلِلْمُؤْمِنِیْنَ وَ[h:5718[ا]لْمُؤْمِنٰتِ ؕ وَلَا تَزِدِ [h:13969[ا][l[ل]ظّٰلِمِیْنَ اِلَّا تَبَارًا ۟۠",
      "juz": 29,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    }
  ]
}