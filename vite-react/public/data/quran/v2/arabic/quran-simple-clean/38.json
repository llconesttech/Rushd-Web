{
  "number": 38,
  "name": "سُورَةُ صٓ",
  "englishName": "Saad",
  "ayahs": [
    {
      "number": 1,
      "text": "بسم الله الرحمن الرحيم ص ۚ والقرآن ذي الذكر",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 2,
      "text": "بل الذين كفروا في عزة وشقاق",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 3,
      "text": "كم أهلكنا من قبلهم من قرن فنادوا ولات حين مناص",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 4,
      "text": "وعجبوا أن جاءهم منذر منهم ۖ وقال الكافرون هذا ساحر كذاب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 5,
      "text": "أجعل الآلهة إلها واحدا ۖ إن هذا لشيء عجاب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 6,
      "text": "وانطلق الملأ منهم أن امشوا واصبروا على آلهتكم ۖ إن هذا لشيء يراد",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 7,
      "text": "ما سمعنا بهذا في الملة الآخرة إن هذا إلا اختلاق",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 8,
      "text": "أأنزل عليه الذكر من بيننا ۚ بل هم في شك من ذكري ۖ بل لما يذوقوا عذاب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 9,
      "text": "أم عندهم خزائن رحمة ربك العزيز الوهاب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 10,
      "text": "أم لهم ملك السماوات والأرض وما بينهما ۖ فليرتقوا في الأسباب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 11,
      "text": "جند ما هنالك مهزوم من الأحزاب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 12,
      "text": "كذبت قبلهم قوم نوح وعاد وفرعون ذو الأوتاد",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 13,
      "text": "وثمود وقوم لوط وأصحاب الأيكة ۚ أولئك الأحزاب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 14,
      "text": "إن كل إلا كذب الرسل فحق عقاب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 391,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 15,
      "text": "وما ينظر هؤلاء إلا صيحة واحدة ما لها من فواق",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 392,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 16,
      "text": "وقالوا ربنا عجل لنا قطنا قبل يوم الحساب",
      "juz": 23,
      "manzil": 6,
      "page": 453,
      "ruku": 392,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اصبر على ما يقولون واذكر عبدنا داوود ذا الأيد ۖ إنه أواب",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 18,
      "text": "إنا سخرنا الجبال معه يسبحن بالعشي والإشراق",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 19,
      "text": "والطير محشورة ۖ كل له أواب",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 20,
      "text": "وشددنا ملكه وآتيناه الحكمة وفصل الخطاب",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 181,
      "sajda": false
    },
    {
      "number": 21,
      "text": "۞ وهل أتاك نبأ الخصم إذ تسوروا المحراب",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 22,
      "text": "إذ دخلوا على داوود ففزع منهم ۖ قالوا لا تخف ۖ خصمان بغى بعضنا على بعض فاحكم بيننا بالحق ولا تشطط واهدنا إلى سواء الصراط",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 23,
      "text": "إن هذا أخي له تسع وتسعون نعجة ولي نعجة واحدة فقال أكفلنيها وعزني في الخطاب",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 24,
      "text": "قال لقد ظلمك بسؤال نعجتك إلى نعاجه ۖ وإن كثيرا من الخلطاء ليبغي بعضهم على بعض إلا الذين آمنوا وعملوا الصالحات وقليل ما هم ۗ وظن داوود أنما فتناه فاستغفر ربه وخر راكعا وأناب ۩",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 182,
      "sajda": {
        "id": 11,
        "recommended": true,
        "obligatory": false
      }
    },
    {
      "number": 25,
      "text": "فغفرنا له ذلك ۖ وإن له عندنا لزلفى وحسن مآب",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 26,
      "text": "يا داوود إنا جعلناك خليفة في الأرض فاحكم بين الناس بالحق ولا تتبع الهوى فيضلك عن سبيل الله ۚ إن الذين يضلون عن سبيل الله لهم عذاب شديد بما نسوا يوم الحساب",
      "juz": 23,
      "manzil": 6,
      "page": 454,
      "ruku": 392,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 27,
      "text": "وما خلقنا السماء والأرض وما بينهما باطلا ۚ ذلك ظن الذين كفروا ۚ فويل للذين كفروا من النار",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 28,
      "text": "أم نجعل الذين آمنوا وعملوا الصالحات كالمفسدين في الأرض أم نجعل المتقين كالفجار",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 29,
      "text": "كتاب أنزلناه إليك مبارك ليدبروا آياته وليتذكر أولو الألباب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 30,
      "text": "ووهبنا لداوود سليمان ۚ نعم العبد ۖ إنه أواب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 31,
      "text": "إذ عرض عليه بالعشي الصافنات الجياد",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 32,
      "text": "فقال إني أحببت حب الخير عن ذكر ربي حتى توارت بالحجاب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 33,
      "text": "ردوها علي ۖ فطفق مسحا بالسوق والأعناق",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 34,
      "text": "ولقد فتنا سليمان وألقينا على كرسيه جسدا ثم أناب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 35,
      "text": "قال رب اغفر لي وهب لي ملكا لا ينبغي لأحد من بعدي ۖ إنك أنت الوهاب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 36,
      "text": "فسخرنا له الريح تجري بأمره رخاء حيث أصاب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 37,
      "text": "والشياطين كل بناء وغواص",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 38,
      "text": "وآخرين مقرنين في الأصفاد",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 39,
      "text": "هذا عطاؤنا فامنن أو أمسك بغير حساب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 40,
      "text": "وإن له عندنا لزلفى وحسن مآب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 393,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 41,
      "text": "واذكر عبدنا أيوب إذ نادى ربه أني مسني الشيطان بنصب وعذاب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 42,
      "text": "اركض برجلك ۖ هذا مغتسل بارد وشراب",
      "juz": 23,
      "manzil": 6,
      "page": 455,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 43,
      "text": "ووهبنا له أهله ومثلهم معهم رحمة منا وذكرى لأولي الألباب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 44,
      "text": "وخذ بيدك ضغثا فاضرب به ولا تحنث ۗ إنا وجدناه صابرا ۚ نعم العبد ۖ إنه أواب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 45,
      "text": "واذكر عبادنا إبراهيم وإسحاق ويعقوب أولي الأيدي والأبصار",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 46,
      "text": "إنا أخلصناهم بخالصة ذكرى الدار",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 47,
      "text": "وإنهم عندنا لمن المصطفين الأخيار",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 48,
      "text": "واذكر إسماعيل واليسع وذا الكفل ۖ وكل من الأخيار",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 49,
      "text": "هذا ذكر ۚ وإن للمتقين لحسن مآب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 50,
      "text": "جنات عدن مفتحة لهم الأبواب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 51,
      "text": "متكئين فيها يدعون فيها بفاكهة كثيرة وشراب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 182,
      "sajda": false
    },
    {
      "number": 52,
      "text": "۞ وعندهم قاصرات الطرف أتراب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 53,
      "text": "هذا ما توعدون ليوم الحساب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 54,
      "text": "إن هذا لرزقنا ما له من نفاد",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 55,
      "text": "هذا ۚ وإن للطاغين لشر مآب",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 56,
      "text": "جهنم يصلونها فبئس المهاد",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 57,
      "text": "هذا فليذوقوه حميم وغساق",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 58,
      "text": "وآخر من شكله أزواج",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 59,
      "text": "هذا فوج مقتحم معكم ۖ لا مرحبا بهم ۚ إنهم صالو النار",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 60,
      "text": "قالوا بل أنتم لا مرحبا بكم ۖ أنتم قدمتموه لنا ۖ فبئس القرار",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 61,
      "text": "قالوا ربنا من قدم لنا هذا فزده عذابا ضعفا في النار",
      "juz": 23,
      "manzil": 6,
      "page": 456,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 62,
      "text": "وقالوا ما لنا لا نرى رجالا كنا نعدهم من الأشرار",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 63,
      "text": "أتخذناهم سخريا أم زاغت عنهم الأبصار",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 64,
      "text": "إن ذلك لحق تخاصم أهل النار",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 394,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 65,
      "text": "قل إنما أنا منذر ۖ وما من إله إلا الله الواحد القهار",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 66,
      "text": "رب السماوات والأرض وما بينهما العزيز الغفار",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 67,
      "text": "قل هو نبأ عظيم",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 68,
      "text": "أنتم عنه معرضون",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 69,
      "text": "ما كان لي من علم بالملإ الأعلى إذ يختصمون",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 70,
      "text": "إن يوحى إلي إلا أنما أنا نذير مبين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 71,
      "text": "إذ قال ربك للملائكة إني خالق بشرا من طين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 72,
      "text": "فإذا سويته ونفخت فيه من روحي فقعوا له ساجدين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 73,
      "text": "فسجد الملائكة كلهم أجمعون",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 74,
      "text": "إلا إبليس استكبر وكان من الكافرين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 75,
      "text": "قال يا إبليس ما منعك أن تسجد لما خلقت بيدي ۖ أستكبرت أم كنت من العالين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 76,
      "text": "قال أنا خير منه ۖ خلقتني من نار وخلقته من طين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 77,
      "text": "قال فاخرج منها فإنك رجيم",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 78,
      "text": "وإن عليك لعنتي إلى يوم الدين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 79,
      "text": "قال رب فأنظرني إلى يوم يبعثون",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 80,
      "text": "قال فإنك من المنظرين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 81,
      "text": "إلى يوم الوقت المعلوم",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 82,
      "text": "قال فبعزتك لأغوينهم أجمعين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 83,
      "text": "إلا عبادك منهم المخلصين",
      "juz": 23,
      "manzil": 6,
      "page": 457,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 84,
      "text": "قال فالحق والحق أقول",
      "juz": 23,
      "manzil": 6,
      "page": 458,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 85,
      "text": "لأملأن جهنم منك وممن تبعك منهم أجمعين",
      "juz": 23,
      "manzil": 6,
      "page": 458,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 86,
      "text": "قل ما أسألكم عليه من أجر وما أنا من المتكلفين",
      "juz": 23,
      "manzil": 6,
      "page": 458,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 87,
      "text": "إن هو إلا ذكر للعالمين",
      "juz": 23,
      "manzil": 6,
      "page": 458,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    },
    {
      "number": 88,
      "text": "ولتعلمن نبأه بعد حين",
      "juz": 23,
      "manzil": 6,
      "page": 458,
      "ruku": 395,
      "hizbQuarter": 183,
      "sajda": false
    }
  ]
}