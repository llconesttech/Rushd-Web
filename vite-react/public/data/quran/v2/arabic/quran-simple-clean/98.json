{
  "number": 98,
  "name": "سُورَةُ البَيِّنَةِ",
  "englishName": "Al-Bayyina",
  "ayahs": [
    {
      "number": 1,
      "text": "بسم الله الرحمن الرحيم لم يكن الذين كفروا من أهل الكتاب والمشركين منفكين حتى تأتيهم البينة",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 2,
      "text": "رسول من الله يتلو صحفا مطهرة",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 3,
      "text": "فيها كتب قيمة",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 4,
      "text": "وما تفرق الذين أوتوا الكتاب إلا من بعد ما جاءتهم البينة",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 5,
      "text": "وما أمروا إلا ليعبدوا الله مخلصين له الدين حنفاء ويقيموا الصلاة ويؤتوا الزكاة ۚ وذلك دين القيمة",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6,
      "text": "إن الذين كفروا من أهل الكتاب والمشركين في نار جهنم خالدين فيها ۚ أولئك هم شر البرية",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 7,
      "text": "إن الذين آمنوا وعملوا الصالحات أولئك هم خير البرية",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 8,
      "text": "جزاؤهم عند ربهم جنات عدن تجري من تحتها الأنهار خالدين فيها أبدا ۖ رضي الله عنهم ورضوا عنه ۚ ذلك لمن خشي ربه",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 540,
      "hizbQuarter": 239,
      "sajda": false
    }
  ]
}