{
  "number": 91,
  "name": "سُورَةُ الشَّمۡسِ",
  "englishName": "Ash-Shams",
  "ayahs": [
    {
      "number": 1,
      "text": "سورج اور اُس کی دھوپ کی قسم",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور چاند کی قسم جبکہ وہ اُس کے پیچھے آتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور دن کی قسم جبکہ وہ (سورج کو) نمایاں کر دیتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور رات کی قسم جبکہ وہ (سورج کو) ڈھانک لیتی ہے",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 5,
      "text": "اور آسمان کی اور اُس ذات کی قسم جس نے اُسے قائم کیا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اور زمین کی اور اُس ذات کی قسم جس نے اُسے بچھایا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اور نفس انسانی کی اور اُس ذات کی قسم جس نے اُسے ہموار کیا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 8,
      "text": "پھر اُس کی بدی اور اُس کی پرہیز گاری اس پر الہام کر دی",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 9,
      "text": "یقیناً فلاح پا گیا وہ جس نے نفس کا تزکیہ کیا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اور نامراد ہوا وہ جس نے اُس کو دبا دیا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 11,
      "text": "ثمود نے اپنی سرکشی کی بنا پر جھٹلایا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 12,
      "text": "جب اُس قوم کا سب سے زیادہ شقی آدمی بپھر کر اٹھا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 13,
      "text": "تو اللہ کے رسول نے اُن لوگوں سے کہا کہ خبردار، اللہ کی اونٹنی کو (ہاتھ نہ لگانا) اوراُس کے پانی پینے (میں مانع نہ ہونا)",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 14,
      "text": "مگر انہوں نے اُس کی بات کو جھوٹا قرار دیا اور اونٹنی کو مار ڈالا آخرکار اُن کے گناہ کی پاداش میں ان کے رب نے ان پر ایسی آفت توڑی کہ ایک ساتھ سب کو پیوند خاک کر دیا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 15,
      "text": "اور اسے (اپنے ا س فعل کے) کسی برے نتیجے کا کوئی خوف نہیں ہے",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    }
  ]
}