{
  "number": 101,
  "name": "سُورَةُ القَارِعَةِ",
  "englishName": "Al-Qaari'a",
  "ayahs": [
    {
      "number": 1,
      "text": "الساعة التي تقرع قلوب الناس بأهوالها.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 2,
      "text": "أيُّ شيء هذه القارعة؟",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 3,
      "text": "وأيُّ شيء أعلمك بها؟",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 4,
      "text": "في ذلك اليوم يكون الناس في كثرتهم وتفرقهم وحركتهم كالفراش المنتشر، وهو الذي يتساقط في النار.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 5,
      "text": "وتكون الجبال كالصوف متعدد الألوان الذي يُنْفَش باليد، فيصير هباء ويزول.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6,
      "text": "فأما من رجحت موازين حسناته، فهو في حياة مرضية في الجنة.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 7,
      "text": "فأما من رجحت موازين حسناته، فهو في حياة مرضية في الجنة.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 8,
      "text": "وأما من خفت موازين حسناته، ورجحت موازين سيئاته، فمأواه جهنم.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 9,
      "text": "وأما من خفت موازين حسناته، ورجحت موازين سيئاته، فمأواه جهنم.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 10,
      "text": "وما أدراك -أيها الرسول- ما هذه الهاوية؟",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 11,
      "text": "إنها نار قد حَمِيت من الوقود عليها.",
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    }
  ]
}