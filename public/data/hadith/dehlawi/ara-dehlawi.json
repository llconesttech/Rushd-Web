    },
    {
      "hadithnumber": 3,
      "arabicnumber": 3,
      "text": "الْمُسْلِمُ مِرْآةُ الْمُسْلِمِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 3
      }
    },
    {
      "hadithnumber": 4,
      "arabicnumber": 4,
      "text": "الْمُسْتَشَارُ مُؤتَمَنٌ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 4
      }
    },
    {
      "hadithnumber": 5,
      "arabicnumber": 5,
      "text": "الدَّالُّ عَلَی الْخَیْرِ کَفَاعِلِهِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 5
      }
    },
    {
      "hadithnumber": 6,
      "arabicnumber": 6,
      "text": "إِسْتَعِیْنُوْا عَلَی الْحَوَائِجِ بِالْکِتْمَانِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 6
      }
    },
    {
      "hadithnumber": 7,
      "arabicnumber": 7,
      "text": "إِتَّقُوْا النَّارَ وَلَوْ بِشِقِّ تَمْرَةٍ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 7
      }
    },
    {
      "hadithnumber": 8,
      "arabicnumber": 8,
      "text": "الدُّنْیَا سِجْنُ الْمُؤمِنِ وَ جَنَّةُ الْکَافِرِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 8
      }
    },
    {
      "hadithnumber": 9,
      "arabicnumber": 9,
      "text": "الْحَیَاءُ خَیْرٌ کُلُّهُ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 9
      }
    },
    {
      "hadithnumber": 10,
      "arabicnumber": 10,
      "text": "عِدَةُ الْمُؤمِنِ کَاَخْذِ الْکَفِّ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 10
      }
    },
    {
      "hadithnumber": 11,
      "arabicnumber": 11,
      "text": "لَا یَحِلُّ لِمُؤمِنٍ اَنْ یَّجُهْرَ أخَاهُ فَوقَ ثَلَاثَةِ أیَّامٍ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 11
      }
    },
    {
      "hadithnumber": 12,
      "arabicnumber": 12,
      "text": "لَیْسَ مِنَّا مَنْ غَشَّنَا",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 12
      }
    },
    {
      "hadithnumber": 13,
      "arabicnumber": 13,
      "text": "مَا قَلَّ وَكَفَى خَيْرٌ مِمَّا كَثُرَ وَأَلْهَى",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 13
      }
    },
    {
      "hadithnumber": 14,
      "arabicnumber": 14,
      "text": "الرَّاجِعُ فِيْ هِبَتِهِ کَالرَّاجِعِ فِيْ قَیْئِهِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 14
      }
    },
    {
      "hadithnumber": 15,
      "arabicnumber": 15,
      "text": "الْبَلَاءُ مُوَکِّلٌ بِالْمَنْطِقِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 15
      }
    },
    {
      "hadithnumber": 16,
      "arabicnumber": 16,
      "text": "النَّاسُ کَأسْنَانِ الْمُشْطِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 16
      }
    },
    {
      "hadithnumber": 17,
      "arabicnumber": 17,
      "text": "الْغِنَى غِنَى النَّفْسِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 17
      }
    },
    {
      "hadithnumber": 18,
      "arabicnumber": 18,
      "text": "الْسَّعِیْدُ مَنْ وُّعِظَ بِغَیْرِهِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 18
      }
    },
    {
      "hadithnumber": 19,
      "arabicnumber": 19,
      "text": "وَ إِنَّ مِنَ الشِّعْرِ لَحِکْمَةً وَاِنَّ مِنَ الْبَیَانِ لَسِحْرًا",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 19
      }
    },
    {
      "hadithnumber": 20,
      "arabicnumber": 20,
      "text": "عَفْوُ الْمُلُوْكِ إِبْقَاءٌ لِلْمُلْكِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 20
      }
    },
    {
      "hadithnumber": 21,
      "arabicnumber": 21,
      "text": "اَلْمَرْءُ مَعَ مَنْ أَحَبَّ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 21
      }
    },
    {
      "hadithnumber": 22,
      "arabicnumber": 22,
      "text": "مَا هَلَكَ إمْرُؤٌ عَرَفَ قَدْرَهُ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 22
      }
    },
    {
      "hadithnumber": 23,
      "arabicnumber": 23,
      "text": "اَلْوَلَدُ لِلْفِرَاشِ وَ لِلْعَاهِرِ الْحَجَرُ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 23
      }
    },
    {
      "hadithnumber": 24,
      "arabicnumber": 24,
      "text": "الْیَدُ الْعُلْیَا خَیْرٌ مِّنَ الْیَدِ السُّفْلَی",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 24
      }
    },
    {
      "hadithnumber": 25,
      "arabicnumber": 25,
      "text": "لَا شَکَرَ اللهَ مَنْ لَّا یَشْکُرُ النَّاسَ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 25
      }
    },
    {
      "hadithnumber": 26,
      "arabicnumber": 26,
      "text": "حُبُّكَ الشَّيْءَ یُعْمِيْ وَ یُصِمُّ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 26
      }
    },
    {
      "hadithnumber": 27,
      "arabicnumber": 27,
      "text": "جُبِلَتِ الْقُلُوبُ عَلی حُبَّ مَنْ اَحْسَنَ اِلَیْهَا وَ بُغْضِ مَنْ اَسَاءَ اِلَیْهَا",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 27
      }
    },
    {
      "hadithnumber": 28,
      "arabicnumber": 28,
      "text": "الْتَّائِبُ مِنَ الذَّنْبِ کَمَنْ لَا ذَنْبَ لَهُ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 28
      }
    },
    {
      "hadithnumber": 29,
      "arabicnumber": 29,
      "text": "الشَّاهِدُ یَرَی مَا لَا یَرَاهُ الْغَائِبُ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 29
      }
    },
    {
      "hadithnumber": 30,
      "arabicnumber": 30,
      "text": "اِذا جَاءَکُمْ کَرِیْمُ قَوْمٍ فَاَکْرِمُوهُ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 30
      }
    },
    {
      "hadithnumber": 31,
      "arabicnumber": 31,
      "text": "الْیَمِینُ الْفَاجِرَةُ تَدَعُ الدِّیَارَ الْبَلَاقِعَ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 31
      }
    },
    {
      "hadithnumber": 32,
      "arabicnumber": 32,
      "text": "مَنْ قُتِلَ دُونَ مَالِهِ فَهُوَ شَهِیْدٌ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 32
      }
    },
    {
      "hadithnumber": 33,
      "arabicnumber": 33,
      "text": "الْاَعْمَالُ بِالنِّیَّةِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 33
      }
    },
    {
      "hadithnumber": 34,
      "arabicnumber": 34,
      "text": "سَیِّدُ الْقَوْمِ خَادِمُهُمْ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 34
      }
    },
    {
      "hadithnumber": 35,
      "arabicnumber": 35,
      "text": "خَیْرُ الْأُمُوْرِ أَوْسَطُهَا",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 35
      }
    },
    {
      "hadithnumber": 36,
      "arabicnumber": 36,
      "text": "اَللَّهُمَّ بَارِكْ فِیْ أُمَّتِیْ فِی بُکُوْرِهَا یَوْمَ الْخَمِیْسِ",
      "grades": [],
      "reference": {
        "book": 1,
        "hadith": 36
      }
    },
    {
      "hadithnumber": 37,
      "arabicnumber": 37,
      "text": "کَادَ الْفَقْرُ أَنْ یَکُوْنَ کُفْرًا",
