      "reference": {
        "book": 1,
        "hadith": 37
      }
    },
    {
      "hadithnumber": 38,
      "arabicnumber": 38,
      "text": "الْسَّفَرُ قِطْعَةٌ مِّنَ الْعَذَابِ",
