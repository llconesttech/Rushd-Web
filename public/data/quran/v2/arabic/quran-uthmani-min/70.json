{
  "number": 70,
  "name": "سُورَةُ المَعَارِجِ",
  "englishName": "Al-Ma'aarij",
  "ayahs": [
    {
      "number": 1,
      "text": "بِسمِ اللَّهِ الرَّحمٰنِ الرَّحيمِ سَأَلَ سائِلٌ بِعَذابٍ واقِعٍ",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 2,
      "text": "لِلكٰفِرينَ لَيسَ لَهُ دافِعٌ",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 3,
      "text": "مِنَ اللَّهِ ذِى المَعارِجِ",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 4,
      "text": "تَعرُجُ المَلٰئِكَةُ وَالرّوحُ إِلَيهِ فى يَومٍ كانَ مِقدارُهُ خَمسينَ أَلفَ سَنَةٍ",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 5,
      "text": "فَاصبِر صَبرًا جَميلًا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 6,
      "text": "إِنَّهُم يَرَونَهُ بَعيدًا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 7,
      "text": "وَنَرىٰهُ قَريبًا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 8,
      "text": "يَومَ تَكونُ السَّماءُ كَالمُهلِ",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 9,
      "text": "وَتَكونُ الجِبالُ كَالعِهنِ",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 10,
      "text": "وَلا يَسـَٔلُ حَميمٌ حَميمًا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 11,
      "text": "يُبَصَّرونَهُم ۚ يَوَدُّ المُجرِمُ لَو يَفتَدى مِن عَذابِ يَومِئِذٍ بِبَنيهِ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 12,
      "text": "وَصٰحِبَتِهِ وَأَخيهِ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 13,
      "text": "وَفَصيلَتِهِ الَّتى تُـٔويهِ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 14,
      "text": "وَمَن فِى الأَرضِ جَميعًا ثُمَّ يُنجيهِ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 15,
      "text": "كَلّا ۖ إِنَّها لَظىٰ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 16,
      "text": "نَزّاعَةً لِلشَّوىٰ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 17,
      "text": "تَدعوا مَن أَدبَرَ وَتَوَلّىٰ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 18,
      "text": "وَجَمَعَ فَأَوعىٰ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 19,
      "text": "۞ إِنَّ الإِنسٰنَ خُلِقَ هَلوعًا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 20,
      "text": "إِذا مَسَّهُ الشَّرُّ جَزوعًا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 21,
      "text": "وَإِذا مَسَّهُ الخَيرُ مَنوعًا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 22,
      "text": "إِلَّا المُصَلّينَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 23,
      "text": "الَّذينَ هُم عَلىٰ صَلاتِهِم دائِمونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 24,
      "text": "وَالَّذينَ فى أَموٰلِهِم حَقٌّ مَعلومٌ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 25,
      "text": "لِلسّائِلِ وَالمَحرومِ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 26,
      "text": "وَالَّذينَ يُصَدِّقونَ بِيَومِ الدّينِ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 27,
      "text": "وَالَّذينَ هُم مِن عَذابِ رَبِّهِم مُشفِقونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 28,
      "text": "إِنَّ عَذابَ رَبِّهِم غَيرُ مَأمونٍ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 29,
      "text": "وَالَّذينَ هُم لِفُروجِهِم حٰفِظونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 30,
      "text": "إِلّا عَلىٰ أَزوٰجِهِم أَو ما مَلَكَت أَيمٰنُهُم فَإِنَّهُم غَيرُ مَلومينَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 31,
      "text": "فَمَنِ ابتَغىٰ وَراءَ ذٰلِكَ فَأُولٰئِكَ هُمُ العادونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 32,
      "text": "وَالَّذينَ هُم لِأَمٰنٰتِهِم وَعَهدِهِم رٰعونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 33,
      "text": "وَالَّذينَ هُم بِشَهٰدٰتِهِم قائِمونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 34,
      "text": "وَالَّذينَ هُم عَلىٰ صَلاتِهِم يُحافِظونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 35,
      "text": "أُولٰئِكَ فى جَنّٰتٍ مُكرَمونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 36,
      "text": "فَمالِ الَّذينَ كَفَروا قِبَلَكَ مُهطِعينَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 37,
      "text": "عَنِ اليَمينِ وَعَنِ الشِّمالِ عِزينَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 38,
      "text": "أَيَطمَعُ كُلُّ امرِئٍ مِنهُم أَن يُدخَلَ جَنَّةَ نَعيمٍ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 39,
      "text": "كَلّا ۖ إِنّا خَلَقنٰهُم مِمّا يَعلَمونَ",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 40,
      "text": "فَلا أُقسِمُ بِرَبِّ المَشٰرِقِ وَالمَغٰرِبِ إِنّا لَقٰدِرونَ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 41,
      "text": "عَلىٰ أَن نُبَدِّلَ خَيرًا مِنهُم وَما نَحنُ بِمَسبوقينَ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 42,
      "text": "فَذَرهُم يَخوضوا وَيَلعَبوا حَتّىٰ يُلٰقوا يَومَهُمُ الَّذى يوعَدونَ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 43,
      "text": "يَومَ يَخرُجونَ مِنَ الأَجداثِ سِراعًا كَأَنَّهُم إِلىٰ نُصُبٍ يوفِضونَ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 44,
      "text": "خٰشِعَةً أَبصٰرُهُم تَرهَقُهُم ذِلَّةٌ ۚ ذٰلِكَ اليَومُ الَّذى كانوا يوعَدونَ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    }
  ]
}