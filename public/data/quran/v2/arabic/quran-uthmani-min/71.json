{
  "number": 71,
  "name": "سُورَةُ نُوحٍ",
  "englishName": "Nooh",
  "ayahs": [
    {
      "number": 1,
      "text": "بِسمِ اللَّهِ الرَّحمٰنِ الرَّحيمِ إِنّا أَرسَلنا نوحًا إِلىٰ قَومِهِ أَن أَنذِر قَومَكَ مِن قَبلِ أَن يَأتِيَهُم عَذابٌ أَليمٌ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 2,
      "text": "قالَ يٰقَومِ إِنّى لَكُم نَذيرٌ مُبينٌ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 3,
      "text": "أَنِ اعبُدُوا اللَّهَ وَاتَّقوهُ وَأَطيعونِ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 4,
      "text": "يَغفِر لَكُم مِن ذُنوبِكُم وَيُؤَخِّركُم إِلىٰ أَجَلٍ مُسَمًّى ۚ إِنَّ أَجَلَ اللَّهِ إِذا جاءَ لا يُؤَخَّرُ ۖ لَو كُنتُم تَعلَمونَ",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 5,
      "text": "قالَ رَبِّ إِنّى دَعَوتُ قَومى لَيلًا وَنَهارًا",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 6,
      "text": "فَلَم يَزِدهُم دُعاءى إِلّا فِرارًا",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 7,
      "text": "وَإِنّى كُلَّما دَعَوتُهُم لِتَغفِرَ لَهُم جَعَلوا أَصٰبِعَهُم فى ءاذانِهِم وَاستَغشَوا ثِيابَهُم وَأَصَرّوا وَاستَكبَرُوا استِكبارًا",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 8,
      "text": "ثُمَّ إِنّى دَعَوتُهُم جِهارًا",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 9,
      "text": "ثُمَّ إِنّى أَعلَنتُ لَهُم وَأَسرَرتُ لَهُم إِسرارًا",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 10,
      "text": "فَقُلتُ استَغفِروا رَبَّكُم إِنَّهُ كانَ غَفّارًا",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 11,
      "text": "يُرسِلِ السَّماءَ عَلَيكُم مِدرارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 12,
      "text": "وَيُمدِدكُم بِأَموٰلٍ وَبَنينَ وَيَجعَل لَكُم جَنّٰتٍ وَيَجعَل لَكُم أَنهٰرًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 13,
      "text": "ما لَكُم لا تَرجونَ لِلَّهِ وَقارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 14,
      "text": "وَقَد خَلَقَكُم أَطوارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 15,
      "text": "أَلَم تَرَوا كَيفَ خَلَقَ اللَّهُ سَبعَ سَمٰوٰتٍ طِباقًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 16,
      "text": "وَجَعَلَ القَمَرَ فيهِنَّ نورًا وَجَعَلَ الشَّمسَ سِراجًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 17,
      "text": "وَاللَّهُ أَنبَتَكُم مِنَ الأَرضِ نَباتًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 18,
      "text": "ثُمَّ يُعيدُكُم فيها وَيُخرِجُكُم إِخراجًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 19,
      "text": "وَاللَّهُ جَعَلَ لَكُمُ الأَرضَ بِساطًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 20,
      "text": "لِتَسلُكوا مِنها سُبُلًا فِجاجًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 504,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 21,
      "text": "قالَ نوحٌ رَبِّ إِنَّهُم عَصَونى وَاتَّبَعوا مَن لَم يَزِدهُ مالُهُ وَوَلَدُهُ إِلّا خَسارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 22,
      "text": "وَمَكَروا مَكرًا كُبّارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 23,
      "text": "وَقالوا لا تَذَرُنَّ ءالِهَتَكُم وَلا تَذَرُنَّ وَدًّا وَلا سُواعًا وَلا يَغوثَ وَيَعوقَ وَنَسرًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 24,
      "text": "وَقَد أَضَلّوا كَثيرًا ۖ وَلا تَزِدِ الظّٰلِمينَ إِلّا ضَلٰلًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 25,
      "text": "مِمّا خَطيـٰٔتِهِم أُغرِقوا فَأُدخِلوا نارًا فَلَم يَجِدوا لَهُم مِن دونِ اللَّهِ أَنصارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 26,
      "text": "وَقالَ نوحٌ رَبِّ لا تَذَر عَلَى الأَرضِ مِنَ الكٰفِرينَ دَيّارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 27,
      "text": "إِنَّكَ إِن تَذَرهُم يُضِلّوا عِبادَكَ وَلا يَلِدوا إِلّا فاجِرًا كَفّارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 28,
      "text": "رَبِّ اغفِر لى وَلِوٰلِدَىَّ وَلِمَن دَخَلَ بَيتِىَ مُؤمِنًا وَلِلمُؤمِنينَ وَالمُؤمِنٰتِ وَلا تَزِدِ الظّٰلِمينَ إِلّا تَبارًا",
      "juz": 29,
      "manzil": 7,
      "page": 571,
      "ruku": 505,
      "hizbQuarter": 228,
      "sajda": false
    }
  ]
}