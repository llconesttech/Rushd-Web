{
  "number": 25,
  "name": "سُورَةُ الفُرۡقَانِ",
  "englishName": "Al-Furqaan",
  "ayahs": [
    {
      "number": 1,
      "text": "بسم الله الرحمن الرحيم تبارك الذي نزل الفرقان على عبده ليكون للعالمين نذيرا",
      "juz": 18,
      "manzil": 4,
      "page": 359,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 2,
      "text": "الذي له ملك السماوات والأرض ولم يتخذ ولدا ولم يكن له شريك في الملك وخلق كل شيء فقدره تقديرا",
      "juz": 18,
      "manzil": 4,
      "page": 359,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 3,
      "text": "واتخذوا من دونه آلهة لا يخلقون شيئا وهم يخلقون ولا يملكون لأنفسهم ضرا ولا نفعا ولا يملكون موتا ولا حياة ولا نشورا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 4,
      "text": "وقال الذين كفروا إن هذا إلا إفك افتراه وأعانه عليه قوم آخرون ۖ فقد جاءوا ظلما وزورا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 5,
      "text": "وقالوا أساطير الأولين اكتتبها فهي تملى عليه بكرة وأصيلا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 6,
      "text": "قل أنزله الذي يعلم السر في السماوات والأرض ۚ إنه كان غفورا رحيما",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 7,
      "text": "وقالوا مال هذا الرسول يأكل الطعام ويمشي في الأسواق ۙ لولا أنزل إليه ملك فيكون معه نذيرا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 8,
      "text": "أو يلقى إليه كنز أو تكون له جنة يأكل منها ۚ وقال الظالمون إن تتبعون إلا رجلا مسحورا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 9,
      "text": "انظر كيف ضربوا لك الأمثال فضلوا فلا يستطيعون سبيلا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 310,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 10,
      "text": "تبارك الذي إن شاء جعل لك خيرا من ذلك جنات تجري من تحتها الأنهار ويجعل لك قصورا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 11,
      "text": "بل كذبوا بالساعة ۖ وأعتدنا لمن كذب بالساعة سعيرا",
      "juz": 18,
      "manzil": 4,
      "page": 360,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 12,
      "text": "إذا رأتهم من مكان بعيد سمعوا لها تغيظا وزفيرا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 13,
      "text": "وإذا ألقوا منها مكانا ضيقا مقرنين دعوا هنالك ثبورا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 14,
      "text": "لا تدعوا اليوم ثبورا واحدا وادعوا ثبورا كثيرا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 15,
      "text": "قل أذلك خير أم جنة الخلد التي وعد المتقون ۚ كانت لهم جزاء ومصيرا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 16,
      "text": "لهم فيها ما يشاءون خالدين ۚ كان على ربك وعدا مسئولا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 17,
      "text": "ويوم يحشرهم وما يعبدون من دون الله فيقول أأنتم أضللتم عبادي هؤلاء أم هم ضلوا السبيل",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 18,
      "text": "قالوا سبحانك ما كان ينبغي لنا أن نتخذ من دونك من أولياء ولكن متعتهم وآباءهم حتى نسوا الذكر وكانوا قوما بورا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 19,
      "text": "فقد كذبوكم بما تقولون فما تستطيعون صرفا ولا نصرا ۚ ومن يظلم منكم نذقه عذابا كبيرا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 20,
      "text": "وما أرسلنا قبلك من المرسلين إلا إنهم ليأكلون الطعام ويمشون في الأسواق ۗ وجعلنا بعضكم لبعض فتنة أتصبرون ۗ وكان ربك بصيرا",
      "juz": 18,
      "manzil": 4,
      "page": 361,
      "ruku": 311,
      "hizbQuarter": 144,
      "sajda": false
    },
    {
      "number": 21,
      "text": "۞ وقال الذين لا يرجون لقاءنا لولا أنزل علينا الملائكة أو نرى ربنا ۗ لقد استكبروا في أنفسهم وعتوا عتوا كبيرا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 22,
      "text": "يوم يرون الملائكة لا بشرى يومئذ للمجرمين ويقولون حجرا محجورا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 23,
      "text": "وقدمنا إلى ما عملوا من عمل فجعلناه هباء منثورا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 24,
      "text": "أصحاب الجنة يومئذ خير مستقرا وأحسن مقيلا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 25,
      "text": "ويوم تشقق السماء بالغمام ونزل الملائكة تنزيلا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 26,
      "text": "الملك يومئذ الحق للرحمن ۚ وكان يوما على الكافرين عسيرا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 27,
      "text": "ويوم يعض الظالم على يديه يقول يا ليتني اتخذت مع الرسول سبيلا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 28,
      "text": "يا ويلتى ليتني لم أتخذ فلانا خليلا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 29,
      "text": "لقد أضلني عن الذكر بعد إذ جاءني ۗ وكان الشيطان للإنسان خذولا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 30,
      "text": "وقال الرسول يا رب إن قومي اتخذوا هذا القرآن مهجورا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 31,
      "text": "وكذلك جعلنا لكل نبي عدوا من المجرمين ۗ وكفى بربك هاديا ونصيرا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 32,
      "text": "وقال الذين كفروا لولا نزل عليه القرآن جملة واحدة ۚ كذلك لنثبت به فؤادك ۖ ورتلناه ترتيلا",
      "juz": 19,
      "manzil": 4,
      "page": 362,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 33,
      "text": "ولا يأتونك بمثل إلا جئناك بالحق وأحسن تفسيرا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 34,
      "text": "الذين يحشرون على وجوههم إلى جهنم أولئك شر مكانا وأضل سبيلا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 312,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 35,
      "text": "ولقد آتينا موسى الكتاب وجعلنا معه أخاه هارون وزيرا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 36,
      "text": "فقلنا اذهبا إلى القوم الذين كذبوا بآياتنا فدمرناهم تدميرا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 37,
      "text": "وقوم نوح لما كذبوا الرسل أغرقناهم وجعلناهم للناس آية ۖ وأعتدنا للظالمين عذابا أليما",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 38,
      "text": "وعادا وثمود وأصحاب الرس وقرونا بين ذلك كثيرا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 39,
      "text": "وكلا ضربنا له الأمثال ۖ وكلا تبرنا تتبيرا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 40,
      "text": "ولقد أتوا على القرية التي أمطرت مطر السوء ۚ أفلم يكونوا يرونها ۚ بل كانوا لا يرجون نشورا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 41,
      "text": "وإذا رأوك إن يتخذونك إلا هزوا أهذا الذي بعث الله رسولا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 42,
      "text": "إن كاد ليضلنا عن آلهتنا لولا أن صبرنا عليها ۚ وسوف يعلمون حين يرون العذاب من أضل سبيلا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 43,
      "text": "أرأيت من اتخذ إلهه هواه أفأنت تكون عليه وكيلا",
      "juz": 19,
      "manzil": 4,
      "page": 363,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 44,
      "text": "أم تحسب أن أكثرهم يسمعون أو يعقلون ۚ إن هم إلا كالأنعام ۖ بل هم أضل سبيلا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 313,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 45,
      "text": "ألم تر إلى ربك كيف مد الظل ولو شاء لجعله ساكنا ثم جعلنا الشمس عليه دليلا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 46,
      "text": "ثم قبضناه إلينا قبضا يسيرا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 47,
      "text": "وهو الذي جعل لكم الليل لباسا والنوم سباتا وجعل النهار نشورا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 48,
      "text": "وهو الذي أرسل الرياح بشرا بين يدي رحمته ۚ وأنزلنا من السماء ماء طهورا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 49,
      "text": "لنحيي به بلدة ميتا ونسقيه مما خلقنا أنعاما وأناسي كثيرا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 50,
      "text": "ولقد صرفناه بينهم ليذكروا فأبى أكثر الناس إلا كفورا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 51,
      "text": "ولو شئنا لبعثنا في كل قرية نذيرا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 52,
      "text": "فلا تطع الكافرين وجاهدهم به جهادا كبيرا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 145,
      "sajda": false
    },
    {
      "number": 53,
      "text": "۞ وهو الذي مرج البحرين هذا عذب فرات وهذا ملح أجاج وجعل بينهما برزخا وحجرا محجورا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 54,
      "text": "وهو الذي خلق من الماء بشرا فجعله نسبا وصهرا ۗ وكان ربك قديرا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 55,
      "text": "ويعبدون من دون الله ما لا ينفعهم ولا يضرهم ۗ وكان الكافر على ربه ظهيرا",
      "juz": 19,
      "manzil": 4,
      "page": 364,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 56,
      "text": "وما أرسلناك إلا مبشرا ونذيرا",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 57,
      "text": "قل ما أسألكم عليه من أجر إلا من شاء أن يتخذ إلى ربه سبيلا",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 58,
      "text": "وتوكل على الحي الذي لا يموت وسبح بحمده ۚ وكفى به بذنوب عباده خبيرا",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 59,
      "text": "الذي خلق السماوات والأرض وما بينهما في ستة أيام ثم استوى على العرش ۚ الرحمن فاسأل به خبيرا",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 60,
      "text": "وإذا قيل لهم اسجدوا للرحمن قالوا وما الرحمن أنسجد لما تأمرنا وزادهم نفورا ۩",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 314,
      "hizbQuarter": 146,
      "sajda": {
        "id": 8,
        "recommended": true,
        "obligatory": false
      }
    },
    {
      "number": 61,
      "text": "تبارك الذي جعل في السماء بروجا وجعل فيها سراجا وقمرا منيرا",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 62,
      "text": "وهو الذي جعل الليل والنهار خلفة لمن أراد أن يذكر أو أراد شكورا",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 63,
      "text": "وعباد الرحمن الذين يمشون على الأرض هونا وإذا خاطبهم الجاهلون قالوا سلاما",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 64,
      "text": "والذين يبيتون لربهم سجدا وقياما",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 65,
      "text": "والذين يقولون ربنا اصرف عنا عذاب جهنم ۖ إن عذابها كان غراما",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 66,
      "text": "إنها ساءت مستقرا ومقاما",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 67,
      "text": "والذين إذا أنفقوا لم يسرفوا ولم يقتروا وكان بين ذلك قواما",
      "juz": 19,
      "manzil": 4,
      "page": 365,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 68,
      "text": "والذين لا يدعون مع الله إلها آخر ولا يقتلون النفس التي حرم الله إلا بالحق ولا يزنون ۚ ومن يفعل ذلك يلق أثاما",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 69,
      "text": "يضاعف له العذاب يوم القيامة ويخلد فيه مهانا",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 70,
      "text": "إلا من تاب وآمن وعمل عملا صالحا فأولئك يبدل الله سيئاتهم حسنات ۗ وكان الله غفورا رحيما",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 71,
      "text": "ومن تاب وعمل صالحا فإنه يتوب إلى الله متابا",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 72,
      "text": "والذين لا يشهدون الزور وإذا مروا باللغو مروا كراما",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 73,
      "text": "والذين إذا ذكروا بآيات ربهم لم يخروا عليها صما وعميانا",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 74,
      "text": "والذين يقولون ربنا هب لنا من أزواجنا وذرياتنا قرة أعين واجعلنا للمتقين إماما",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 75,
      "text": "أولئك يجزون الغرفة بما صبروا ويلقون فيها تحية وسلاما",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 76,
      "text": "خالدين فيها ۚ حسنت مستقرا ومقاما",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    },
    {
      "number": 77,
      "text": "قل ما يعبأ بكم ربي لولا دعاؤكم ۖ فقد كذبتم فسوف يكون لزاما",
      "juz": 19,
      "manzil": 4,
      "page": 366,
      "ruku": 315,
      "hizbQuarter": 146,
      "sajda": false
    }
  ]
}