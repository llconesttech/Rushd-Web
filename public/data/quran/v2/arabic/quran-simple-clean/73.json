{
  "number": 73,
  "name": "سُورَةُ المُزَّمِّلِ",
  "englishName": "Al-Muzzammil",
  "ayahs": [
    {
      "number": 1,
      "text": "بسم الله الرحمن الرحيم يا أيها المزمل",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 2,
      "text": "قم الليل إلا قليلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 3,
      "text": "نصفه أو انقص منه قليلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 4,
      "text": "أو زد عليه ورتل القرآن ترتيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 5,
      "text": "إنا سنلقي عليك قولا ثقيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 6,
      "text": "إن ناشئة الليل هي أشد وطئا وأقوم قيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 7,
      "text": "إن لك في النهار سبحا طويلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 8,
      "text": "واذكر اسم ربك وتبتل إليه تبتيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 9,
      "text": "رب المشرق والمغرب لا إله إلا هو فاتخذه وكيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 10,
      "text": "واصبر على ما يقولون واهجرهم هجرا جميلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 11,
      "text": "وذرني والمكذبين أولي النعمة ومهلهم قليلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 12,
      "text": "إن لدينا أنكالا وجحيما",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 13,
      "text": "وطعاما ذا غصة وعذابا أليما",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 14,
      "text": "يوم ترجف الأرض والجبال وكانت الجبال كثيبا مهيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 15,
      "text": "إنا أرسلنا إليكم رسولا شاهدا عليكم كما أرسلنا إلى فرعون رسولا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 16,
      "text": "فعصى فرعون الرسول فأخذناه أخذا وبيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 17,
      "text": "فكيف تتقون إن كفرتم يوما يجعل الولدان شيبا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 18,
      "text": "السماء منفطر به ۚ كان وعده مفعولا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 19,
      "text": "إن هذه تذكرة ۖ فمن شاء اتخذ إلى ربه سبيلا",
      "juz": 29,
      "manzil": 7,
      "page": 574,
      "ruku": 508,
      "hizbQuarter": 229,
      "sajda": false
    },
    {
      "number": 20,
      "text": "۞ إن ربك يعلم أنك تقوم أدنى من ثلثي الليل ونصفه وثلثه وطائفة من الذين معك ۚ والله يقدر الليل والنهار ۚ علم أن لن تحصوه فتاب عليكم ۖ فاقرءوا ما تيسر من القرآن ۚ علم أن سيكون منكم مرضى ۙ وآخرون يضربون في الأرض يبتغون من فضل الله ۙ وآخرون يقاتلون في سبيل الله ۖ فاقرءوا ما تيسر منه ۚ وأقيموا الصلاة وآتوا الزكاة وأقرضوا الله قرضا حسنا ۚ وما تقدموا لأنفسكم من خير تجدوه عند الله هو خيرا وأعظم أجرا ۚ واستغفروا الله ۖ إن الله غفور رحيم",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 509,
      "hizbQuarter": 230,
      "sajda": false
    }
  ]
}