{
  "number": 44,
  "name": "سُورَةُ الدُّخَانِ",
  "englishName": "Ad-Dukhaan",
  "ayahs": [
    {
      "number": 1,
      "text": "حٰم",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اس کتاب روشن کی قسم",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 3,
      "text": "کہ ہم نے اس کو مبارک رات میں نازل فرمایا ہم تو رستہ دکھانے والے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اسی رات میں تمام حکمت کے کام فیصل کئے جاتے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 5,
      "text": "(یعنی) ہمارے ہاں سے حکم ہو کر۔ بےشک ہم ہی (پیغمبر کو) بھیجتے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 6,
      "text": "(یہ) تمہارے پروردگار کی رحمت ہے۔ وہ تو سننے والا جاننے والا ہے",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 7,
      "text": "آسمانوں اور زمین کا اور جو کچھ ان دونوں میں ہے سب کا مالک۔ بشرطیکہ تم لوگ یقین کرنے والے ہو",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اس کے سوا کوئی معبود نہیں۔ (وہی) جِلاتا ہے اور (وہی) مارتا ہے۔ وہی تمہارا اور تمہارے باپ دادا کا پروردگار ہے",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 9,
      "text": "لیکن یہ لوگ شک میں کھیل رہے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 10,
      "text": "تو اس دن کا انتظار کرو کہ آسمان سے صریح دھواں نکلے گا",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 11,
      "text": "جو لوگوں پر چھا جائے گا۔ یہ درد دینے والا عذاب ہے",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اے پروردگار ہم سے اس عذاب کو دور کر ہم ایمان لاتے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 13,
      "text": "(اس وقت) ان کو نصیحت کہاں مفید ہوگی جب کہ ان کے پاس پیغمبر آچکے جو کھول کھول کر بیان کر دیتے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 14,
      "text": "پھر انہوں نے ان سے منہ پھیر لیا اور کہنے لگے (یہ تو) پڑھایا ہوا (اور) دیوانہ ہے",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 15,
      "text": "ہم تو تھوڑے دنوں عذاب ٹال دیتے ہیں (مگر) تم پھر کفر کرنے لگتے ہو",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 16,
      "text": "جس دن ہم بڑی سخت پکڑ پکڑیں گے تو بےشک انتقام لے کر چھوڑیں گے",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 198,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اور ان سے پہلے ہم نے قوم فرعون کی آزمائش کی اور ان کے پاس ایک عالی قدر پیغمبر آئے",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 18,
      "text": "(جنہوں نے) یہ (کہا) کہ خدا کے بندوں (یعنی بنی اسرائیل) کو میرے حوالے کردو میں تمہارا امانت دار پیغمبر ہوں",
      "juz": 25,
      "manzil": 6,
      "page": 496,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 19,
      "text": "اور خدا کے سامنے سرکشی نہ کرو۔ میں تمہارے پاس کھلی دلیل لے کر آیا ہوں",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 20,
      "text": "اور اس (بات) سے کہ تم مجھے سنگسار کرو اپنے اور تمہارے پروردگار کی پناہ مانگتا ہوں",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 21,
      "text": "اور اگر تم مجھ پر ایمان نہیں لاتے تو مجھ سے الگ ہو جاؤ",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 22,
      "text": "تب موسیٰ نے اپنے پروردگار سے دعا کی کہ یہ نافرمان لوگ ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 23,
      "text": "(خدا نے فرمایا کہ) میرے بندوں کو راتوں رات لے کر چلے جاؤ اور (فرعونی) ضرور تمہارا تعاقب کریں گے",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 24,
      "text": "اور دریا سے (کہ) خشک (ہو رہا ہوگا) پار ہو جاؤ (تمہارے بعد) ان کا تمام لشکر ڈبو دیا جائے گا",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 25,
      "text": "وہ لوگ بہت سے باغ اور چشمے چھوڑ گئے",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 26,
      "text": "اور کھیتیاں اور نفیس مکان",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اور آرام کی چیزیں جن میں عیش کیا کرتے تھے",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 28,
      "text": "اسی طرح (ہوا) اور ہم نے دوسرے لوگوں کو ان چیزوں کا مالک بنا دیا",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 29,
      "text": "پھر ان پر نہ تو آسمان کو اور زمین کو رونا آیا اور نہ ان کو مہلت ہی دی گئی",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 431,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 30,
      "text": "اور ہم نے بنی اسرائیل کو ذلت کے عذاب سے نجات دی",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 31,
      "text": "(یعنی) فرعون سے۔ بےشک وہ سرکش (اور) حد سے نکلا ہوا تھا",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 32,
      "text": "اور ہم نے بنی اسرائیل کو اہل عالم سے دانستہ منتخب کیا تھا",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 33,
      "text": "اور ان کو ایسی نشانیاں دی تھیں جن میں صریح آزمائش تھی",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 34,
      "text": "یہ لوگ یہ کہتے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 35,
      "text": "کہ ہمیں صرف پہلی دفعہ (یعنی ایک بار) مرنا ہے اور (پھر) اُٹھنا نہیں",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 36,
      "text": "پس اگر تم سچے ہو تو ہمارے باپ دادا کو (زندہ کر) لاؤ",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 37,
      "text": "بھلا یہ اچھے ہیں یا تُبّع کی قوم اور وہ لوگ جو تم سے پہلے ہوچکے ہیں۔ ہم نے ان (سب) کو ہلاک کردیا۔ بےشک وہ گنہگار تھے",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 38,
      "text": "اور ہم نے آسمانوں اور زمین کو اور جو کچھ ان میں ہے ان کو کھیلتے ہوئے نہیں بنایا",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 39,
      "text": "ان کو ہم نے تدبیر سے پیدا کیا ہے لیکن اکثر لوگ نہیں جانتے",
      "juz": 25,
      "manzil": 6,
      "page": 497,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 40,
      "text": "کچھ شک نہیں کہ فیصلے کا دن ان سب (کے اُٹھنے) کا وقت ہے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 41,
      "text": "جس دن کوئی دوست کسی دوست کے کچھ کام نہ آئے گا اور نہ ان کو مدد ملے گی",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 42,
      "text": "مگر جس پر خدا مہربانی کرے۔ وہ تو غالب اور مہربان ہے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 432,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 43,
      "text": "بلاشبہ تھوہر کا درخت",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 44,
      "text": "گنہگار کا کھانا ہے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 45,
      "text": "جیسے پگھلا ہوا تانبا۔ پیٹوں میں (اس طرح) کھولے گا",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 46,
      "text": "جس طرح گرم پانی کھولتا ہے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 47,
      "text": "(حکم دیا جائے گا کہ) اس کو پکڑ لو اور کھینچتے ہوئے دوزخ کے بیچوں بیچ لے جاؤ",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 48,
      "text": "پھر اس کے سر پر کھولتا ہوا پانی انڈیل دو (کہ عذاب پر) عذاب (ہو)",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 49,
      "text": "(اب) مزہ چکھ۔ تو بڑی عزت والا (اور) سردار ہے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 50,
      "text": "یہ وہی (دوزخ) ہے جس میں تم لوگ شک کیا کرتے تھے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 51,
      "text": "بےشک پرہیزگار لوگ امن کے مقام میں ہوں گے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 52,
      "text": "(یعنی) باغوں اور چشموں میں",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 53,
      "text": "حریر کا باریک اور دبیز لباس پہن کر ایک دوسرے کے سامنے بیٹھے ہوں گے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 54,
      "text": "اس طرح (کا حال ہوگا) اور ہم بڑی بڑی آنکھوں والی سفید رنگ کی عورتوں سے ان کے جوڑے لگائیں گے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 55,
      "text": "وہاں خاطر جمع سے ہر قسم کے میوے منگوائیں گے (اور کھائیں گے)",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 56,
      "text": "(اور) پہلی دفعہ کے مرنے کے سوا (کہ مرچکے تھے) موت کا مزہ نہیں چکھیں گے۔ اور خدا ان کو دوزخ کے عذاب سے بچا لے گا",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 57,
      "text": "یہ تمہارے پروردگار کا فضل ہے۔ یہی تو بڑی کامیابی ہے",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 58,
      "text": "ہم نے اس (قرآن) کو تمہاری زبان میں آسان کردیا ہے تاکہ یہ لوگ نصیحت پکڑیں",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    },
    {
      "number": 59,
      "text": "پس تم بھی انتظار کرو یہ بھی انتظار کر رہے ہیں",
      "juz": 25,
      "manzil": 6,
      "page": 498,
      "ruku": 433,
      "hizbQuarter": 199,
      "sajda": false
    }
  ]
}