{
  "number": 82,
  "name": "سُورَةُ الانفِطَارِ",
  "englishName": "Al-Infitaar",
  "ayahs": [
    {
      "number": 1,
      "text": "جب آسمان پھٹ جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور جب تارے جھڑ پڑیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور جب دریا بہہ (کر ایک دوسرے سے مل) جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور جب قبریں اکھیڑ دی جائیں گی",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5,
      "text": "تب ہر شخص معلوم کرلے گا کہ اس نے آگے کیا بھیجا تھا اور پیچھے کیا چھوڑا تھا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اے انسان تجھ کو اپنے پروردگار کرم گستر کے باب میں کس چیز نے دھوکا دیا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 7,
      "text": "(وہی تو ہے) جس نے تجھے بنایا اور (تیرے اعضا کو) ٹھیک کیا اور (تیرے قامت کو) معتدل رکھا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور جس صورت میں چاہا تجھے جوڑ دیا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 9,
      "text": "مگر ہیہات تم لوگ جزا کو جھٹلاتے ہو",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 10,
      "text": "حالانکہ تم پر نگہبان مقرر ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 11,
      "text": "عالی قدر (تمہاری باتوں کے) لکھنے والے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 12,
      "text": "جو تم کرتے ہو وہ اسے جانتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 13,
      "text": "بے شک نیکوکار نعمتوں (کی بہشت) میں ہوں گے۔",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور بدکردار دوزخ میں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 15,
      "text": "(یعنی) جزا کے دن اس میں داخل ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 16,
      "text": "اور اس سے چھپ نہیں سکیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اور تمہیں کیا معلوم کہ جزا کا دن کیسا ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 18,
      "text": "پھر تمہیں کیا معلوم کہ جزا کا دن کیسا ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 19,
      "text": "جس روز کوئی کسی کا بھلا نہ کر سکے گا اور حکم اس روز خدا ہی کا ہو گا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    }
  ]
}