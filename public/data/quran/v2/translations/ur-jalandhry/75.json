{
  "number": 75,
  "name": "سُورَةُ القِيَامَةِ",
  "englishName": "Al-Qiyaama",
  "ayahs": [
    {
      "number": 1,
      "text": "ہم کو روز قیامت کی قسم",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور نفس لوامہ کی (کہ سب لوگ اٹھا کر) کھڑے کئے جائیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 3,
      "text": "کیا انسان یہ خیال کرتا ہے کہ ہم اس کی (بکھری ہوئی) ہڈیاں اکٹھی نہیں کریں گے؟",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 4,
      "text": "ضرور کریں گے (اور) ہم اس بات پر قادر ہیں کہ اس کی پور پور درست کردیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5,
      "text": "مگر انسان چاہتا ہے کہ آگے کو خود سری کرتا جائے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 6,
      "text": "پوچھتا ہے کہ قیامت کا دن کب ہوگا؟",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 7,
      "text": "جب آنکھیں چندھیا جائیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور چاند گہنا جائے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور سورج اور چاند جمع کردیئے جائیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اس دن انسان کہے گا کہ (اب) کہاں بھاگ جاؤں؟",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 11,
      "text": "بےشک کہیں پناہ نہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اس روز پروردگار ہی کے پاس ٹھکانا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 13,
      "text": "اس دن انسان کو جو (عمل) اس نے آگے بھیجے اور پیچھے چھوڑے ہوں گے سب بتا دیئے جائیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 14,
      "text": "بلکہ انسان آپ اپنا گواہ ہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 15,
      "text": "اگرچہ عذر ومعذرت کرتا رہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 16,
      "text": "اور (اے محمدﷺ) وحی کے پڑھنے کے لئے اپنی زبان نہ چلایا کرو کہ اس کو جلد یاد کرلو",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اس کا جمع کرنا اور پڑھانا ہمارے ذمے ہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 18,
      "text": "جب ہم وحی پڑھا کریں تو تم (اس کو سنا کرو اور) پھر اسی طرح پڑھا کرو",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 19,
      "text": "پھر اس (کے معانی) کا بیان بھی ہمارے ذمے ہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 20,
      "text": "مگر (لوگو) تم دنیا کو دوست رکھتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 21,
      "text": "اور آخرت کو ترک کئے دیتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 22,
      "text": "اس روز بہت سے منہ رونق دار ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 23,
      "text": "اور) اپنے پروردگار کے محو دیدار ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 24,
      "text": "اور بہت سے منہ اس دن اداس ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 25,
      "text": "خیال کریں گے کہ ان پر مصیبت واقع ہونے کو ہے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 26,
      "text": "دیکھو جب جان گلے تک پہنچ جائے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اور لوگ کہنے لگیں (اس وقت) کون جھاڑ پھونک کرنے والا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 28,
      "text": "اور اس (جان بلب) نے سمجھا کہ اب سب سے جدائی ہے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 29,
      "text": "اور پنڈلی سے پنڈلی لپٹ جائے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 30,
      "text": "اس دن تجھ کو اپنے پروردگار کی طرف چلنا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 31,
      "text": "تو اس (ناعاقبت) اندیش نے نہ تو (کلام خدا) کی تصدیق کی نہ نماز پڑھی",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 32,
      "text": "بلکہ جھٹلایا اور منہ پھیر لیا",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 33,
      "text": "پھر اپنے گھر والوں کے پاس اکڑتا ہوا چل دیا",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 34,
      "text": "افسوس ہے تجھ پر پھر افسوس ہے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 35,
      "text": "پھر افسوس ہے تجھ پر پھر افسوس ہے",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 36,
      "text": "کیا انسان خیال کرتا ہے کہ یوں ہی چھوڑ دیا جائے گا؟",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 37,
      "text": "کیا وہ منی کا جو رحم میں ڈالی جاتی ہے ایک قطرہ نہ تھا؟",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 38,
      "text": "پھر لوتھڑا ہوا پھر (خدا نے) اس کو بنایا پھر (اس کے اعضا کو) درست کیا",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 39,
      "text": "پھر اس کی دو قسمیں بنائیں (ایک) مرد اور (ایک) عورت",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 40,
      "text": "کیا اس خالق کو اس بات پر قدرت نہیں کہ مردوں کو جلا اُٹھائے؟",
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    }
  ]
}