{
  "number": 68,
  "name": "سُورَةُ القَلَمِ",
  "englishName": "Al-Qalam",
  "ayahs": [
    {
      "number": 1,
      "text": "نٓ۔ قلم کی اور جو (اہل قلم) لکھتے ہیں اس کی قسم",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 2,
      "text": "کہ (اے محمدﷺ) تم اپنے پروردگار کے فضل سے دیوانے نہیں ہو",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور تمہارے لئے بے انتہا اجر ہے",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور اخلاق تمہارے بہت (عالی) ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 5,
      "text": "سو عنقریب تم بھی دیکھ لو گے اور یہ (کافر) بھی دیکھ لیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 6,
      "text": "کہ تم میں سے کون دیوانہ ہے",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 7,
      "text": "تمہارا پروردگار اس کو بھی خوب جانتا ہے جو اس کے رستے سے بھٹک گیا اور ان کو بھی خوب جانتا ہے جو سیدھے راستے پر چل رہے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 8,
      "text": "تو تم جھٹلانے والوں کا کہا نہ ماننا",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 9,
      "text": "یہ لوگ چاہتے ہیں کہ تم نرمی اختیار کرو تو یہ بھی نرم ہوجائیں",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اور کسی ایسے شخص کے کہے میں نہ آجانا جو بہت قسمیں کھانے والا ذلیل اوقات ہے",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 11,
      "text": "طعن آمیز اشارتیں کرنے والا چغلیاں لئے پھرنے والا",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 12,
      "text": "مال میں بخل کرنے والا حد سے بڑھا ہوا بدکار",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 13,
      "text": "سخت خو اور اس کے علاوہ بدذات ہے",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اس سبب سے کہ مال اور بیٹے رکھتا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 15,
      "text": "جب اس کو ہماری آیتیں پڑھ کر سنائی جاتی ہیں تو کہتا ہے کہ یہ اگلے لوگوں کے افسانے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 564,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 16,
      "text": "ہم عنقریب اس کی ناک پر داغ لگائیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 17,
      "text": "ہم نے ان لوگوں کی اسی طرح آزمائش کی ہے جس طرح باغ والوں کی آزمائش کی تھی۔ جب انہوں نے قسمیں کھا کھا کر کہا کہ صبح ہوتے ہوتے ہم اس کا میوہ توڑ لیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اور انشاء الله نہ کہا",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 19,
      "text": "سو وہ ابھی سو ہی رہے تھے کہ تمہارے پروردگار کی طرف سے (راتوں رات) اس پر ایک آفت پھر گئی",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 20,
      "text": "تو وہ ایسا ہوگیا جیسے کٹی ہوئی کھیتی",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 21,
      "text": "جب صبح ہوئی تو وہ لوگ ایک دوسرے کو پکارنے لگے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 22,
      "text": "اگر تم کو کاٹنا ہے تو اپنی کھیتی پر سویرے ہی جا پہنچو",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 23,
      "text": "تو وہ چل پڑے اور آپس میں چپکے چپکے کہتے جاتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 24,
      "text": "آج یہاں تمہارے پاس کوئی فقیر نہ آنے پائے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 25,
      "text": "اور کوشش کے ساتھ سویرے ہی جا پہنچے (گویا کھیتی پر) قادر ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 26,
      "text": "جب باغ کو دیکھا تو (ویران) کہنے لگے کہ ہم رستہ بھول گئے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 27,
      "text": "نہیں بلکہ ہم (برگشتہ نصیب) بےنصیب ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 28,
      "text": "ایک جو اُن میں فرزانہ تھا بولا کہ کیا میں نے تم سے نہیں کہا تھا کہ تم تسبیح کیوں نہیں کرتے؟",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 29,
      "text": "(تب) وہ کہنے لگے کہ ہمارا پروردگار پاک ہے بےشک ہم ہی قصوروار تھے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 30,
      "text": "پھر لگے ایک دوسرے کو رو در رو ملامت کرنے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 31,
      "text": "کہنے لگے ہائے شامت ہم ہی حد سے بڑھ گئے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 32,
      "text": "امید ہے کہ ہمارا پروردگار اس کے بدلے میں ہمیں اس سے بہتر باغ عنایت کرے ہم اپنے پروردگار کی طرف سے رجوع لاتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 33,
      "text": "(دیکھو) عذاب یوں ہوتا ہے۔ اور آخرت کا عذاب اس سے کہیں بڑھ کر ہے۔ کاش! یہ لوگ جانتے ہوتے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 498,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 34,
      "text": "پرہیزگاروں کے لئے ان کے پروردگار کے ہاں نعمت کے باغ ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 35,
      "text": "کیا ہم فرمانبرداروں کو نافرمانوں کی طرف (نعمتوں سے) محروم کردیں گے؟",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 36,
      "text": "تمہیں کیا ہوگیا ہے کیسی تجویزیں کرتے ہو؟",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 37,
      "text": "کیا تمہارے پاس کوئی کتاب ہے جس میں (یہ) پڑھتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 38,
      "text": "کہ جو چیز تم پسند کرو گے وہ تم کو ضرور ملے گی",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 39,
      "text": "یا تم نے ہم سے قسمیں لے رکھی ہیں جو قیامت کے دن تک چلی جائیں گی کہ جس شے کا تم حکم کرو گے وہ تمہارے لئے حاضر ہوگی",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 40,
      "text": "ان سے پوچھو کہ ان میں سے اس کا کون ذمہ لیتا ہے؟",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 41,
      "text": "کیا (اس قول میں) ان کے اور بھی شریک ہیں؟ اگر یہ سچے ہیں تو اپنے شریکوں کو لا سامنے کریں",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 42,
      "text": "جس دن پنڈلی سے کپڑا اٹھا دیا جائے گا اور کفار سجدے کے لئے بلائے جائیں گے تو سجدہ نہ کرسکیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 565,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 43,
      "text": "ان کی آنکھیں جھکی ہوئی ہوں گی اور ان پر ذلت چھا رہی ہوگی حالانکہ پہلے (اُس وقت) سجدے کے لئے بلاتے جاتے تھے جب کہ صحیح وسالم تھے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 44,
      "text": "تو مجھ کو اس کلام کے جھٹلانے والوں سے سمجھ لینے دو۔ ہم ان کو آہستہ آہستہ ایسے طریق سے پکڑیں گے کہ ان کو خبر بھی نہ ہوگی",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 45,
      "text": "اور میں ان کو مہلت دیئے جاتا ہوں میری تدبیر قوی ہے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 46,
      "text": "کیا تم ان سے کچھ اجر مانگتے ہو کہ ان پر تاوان کا بوجھ پڑ رہا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 47,
      "text": "یا ان کے پاس غیب کی خبر ہے کہ (اسے) لکھتے جاتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 48,
      "text": "تو اپنے پروردگار کے حکم کے انتظار میں صبر کئے رہو اور مچھلی (کا لقمہ ہونے) والے یونس کی طرح رہو نا کہ انہوں نے (خدا) کو پکارا اور وہ (غم و) غصے میں بھرے ہوئے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 49,
      "text": "اگر تمہارے پروردگار کی مہربانی ان کی یاوری نہ کرتی تو وہ چٹیل میدان میں ڈال دیئے جاتے اور ان کا حال ابتر ہوجاتا",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 50,
      "text": "پھر پروردگار نے ان کو برگزیدہ کرکے نیکوکاروں میں کرلیا",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 51,
      "text": "اور کافر جب (یہ) نصیحت (کی کتاب) سنتے ہیں تو یوں لگتے ہیں کہ تم کو اپنی نگاہوں سے پھسلا دیں گے اور کہتے یہ تو دیوانہ ہے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    },
    {
      "number": 52,
      "text": "اور (لوگو) یہ (قرآن) اہل عالم کے لئے نصیحت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 499,
      "hizbQuarter": 226,
      "sajda": false
    }
  ]
}