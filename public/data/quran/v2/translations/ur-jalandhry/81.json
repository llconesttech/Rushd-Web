{
  "number": 81,
  "name": "سُورَةُ التَّكۡوِيرِ",
  "englishName": "At-Takwir",
  "ayahs": [
    {
      "number": 1,
      "text": "جب سورج لپیٹ لیا جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 2,
      "text": "جب تارے بےنور ہو جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور جب پہاڑ چلائے جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور جب بیانے والی اونٹنیاں بےکار ہو جائیں گی",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5,
      "text": "اور جب وحشی جانور جمع اکٹھے ہو جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اور جب دریا آگ ہو جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اور جب روحیں (بدنوں سے) ملا دی جائیں گی",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور جب لڑکی سے جو زندہ دفنا دی گئی ہو پوچھا جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 9,
      "text": "کہ وہ کس گناہ پرماری گئی",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اور جب (عملوں کے) دفتر کھولے جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 11,
      "text": "اور جب آسمانوں کی کھال کھینچ لی جائے گی",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اور جب دوزخ (کی آگ) بھڑکائی جائے گی",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 13,
      "text": "اور بہشت جب قریب لائی جائے گی",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 14,
      "text": "تب ہر شخص معلوم کر لے گا کہ وہ کیا لے کر آیا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 15,
      "text": "ہم کو ان ستاروں کی قسم جو پیچھے ہٹ جاتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 16,
      "text": "(اور) جو سیر کرتے اور غائب ہو جاتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اور رات کی قسم جب ختم ہونے لگتی ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اور صبح کی قسم جب نمودار ہوتی ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 19,
      "text": "کہ بےشک یہ (قرآن) فرشتہٴ عالی مقام کی زبان کا پیغام ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 20,
      "text": "جو صاحب قوت مالک عرش کے ہاں اونچے درجے والا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 21,
      "text": "سردار (اور) امانت دار ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 22,
      "text": "اور (مکے والو) تمہارے رفیق (یعنی محمدﷺ) دیوانے نہیں ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 23,
      "text": "بےشک انہوں نے اس (فرشتے) کو (آسمان کے کھلے یعنی) مشرقی کنارے پر دیکھا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 24,
      "text": "اور وہ پوشیدہ باتوں (کے ظاہر کرنے) میں بخیل نہیں",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 25,
      "text": "اور یہ شیطان مردود کا کلام نہیں",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 26,
      "text": "پھر تم کدھر جا رہے ہو",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 27,
      "text": "یہ تو جہان کے لوگوں کے لیے نصیحت ہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 28,
      "text": "(یعنی) اس کے لیے جو تم میں سے سیدھی چال چلنا چاہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 29,
      "text": "اور تم کچھ بھی نہیں چاہ سکتے مگر وہی جو خدائے رب العالمین چاہے",
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    }
  ]
}