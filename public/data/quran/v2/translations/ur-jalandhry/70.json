{
  "number": 70,
  "name": "سُورَةُ المَعَارِجِ",
  "englishName": "Al-Ma'aarij",
  "ayahs": [
    {
      "number": 1,
      "text": "ایک طلب کرنے والے نے عذاب طلب کیا جو نازل ہو کر رہے گا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 2,
      "text": "(یعنی) کافروں پر (اور) کوئی اس کو ٹال نہ سکے گا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 3,
      "text": "(اور وہ) خدائے صاحب درجات کی طرف سے (نازل ہوگا)",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 4,
      "text": "جس کی طرف روح (الامین) اور فرشتے پڑھتے ہیں (اور) اس روز (نازل ہوگا) جس کا اندازہ پچاس ہزار برس کا ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 5,
      "text": "(تو تم کافروں کی باتوں کو) قوت کے ساتھ برداشت کرتے رہو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 6,
      "text": "وہ ان لوگوں کی نگاہ میں دور ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اور ہماری نظر میں نزدیک",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 8,
      "text": "جس دن آسمان ایسا ہو جائے گا جیسے پگھلا ہوا تانبا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور پہاڑ (ایسے) جیسے (دھنکی ہوئی) رنگین اون",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اور کوئی دوست کسی دوست کا پرسان نہ ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 11,
      "text": "ایک دوسرے کو سامنے دیکھ رہے ہوں گے (اس روز) گنہگار خواہش کرے گا کہ کسی طرح اس دن کے عذاب کے بدلے میں (سب کچھ) دے دے یعنی اپنے بیٹے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اور اپنی بیوی اور اپنے بھائی",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 13,
      "text": "اور اپنا خاندان جس میں وہ رہتا تھا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور جتنے آدمی زمین میں ہیں (غرض) سب (کچھ دے دے) اور اپنے تئیں عذاب سے چھڑا لے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 15,
      "text": "(لیکن) ایسا ہرگز نہیں ہوگا وہ بھڑکتی ہوئی آگ ہے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 16,
      "text": "کھال ادھیڑ ڈالنے والی",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 17,
      "text": "ان لوگوں کو اپنی طرف بلائے گی جنہوں نے (دین حق سے) اعراض کیا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اور (مال) جمع کیا اور بند کر رکھا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 19,
      "text": "کچھ شک نہیں کہ انسان کم حوصلہ پیدا ہوا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 20,
      "text": "جب اسے تکلیف پہنچتی ہے تو گھبرا اٹھتا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 21,
      "text": "اور جب آسائش حاصل ہوتی ہے تو بخیل بن جاتا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 22,
      "text": "مگر نماز گزار",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 23,
      "text": "جو نماز کا التزام رکھتے (اور بلاناغہ پڑھتے) ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 24,
      "text": "اور جن کے مال میں حصہ مقرر ہے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 25,
      "text": "(یعنی) مانگنے والے کا۔ اور نہ مانگے والے والا کا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 26,
      "text": "اور جو روز جزا کو سچ سمجھتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اور جو اپنے پروردگار کے عذاب سے خوف رکھتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 28,
      "text": "بےشک ان کے پروردگار کا عذاب ہے ہی ایسا کہ اس سے بےخوف نہ ہوا جائے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 29,
      "text": "اور جو اپنی شرمگاہوں کی حفاظت کرتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 30,
      "text": "مگر اپنی بیویوں یا لونڈیوں سے کہ (ان کے پاس جانے پر) انہیں کچھ ملامت نہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 31,
      "text": "اور جو لوگ ان کے سوا اور کے خواستگار ہوں وہ حد سے نکل جانے والے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 32,
      "text": "اور جو اپنی امانتوں اور اقراروں کا پاس کرتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 33,
      "text": "اور جو اپنی شہادتوں پر قائم رہتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 34,
      "text": "اور جو اپنی نماز کی خبر رکھتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 35,
      "text": "یہی لوگ باغہائے بہشت میں عزت واکرام سے ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 502,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 36,
      "text": "تو ان کافروں کو کیا ہوا ہے کہ تمہاری طرف دوڑے چلے آتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 37,
      "text": "اور) دائیں بائیں سے گروہ گروہ ہو کر (جمع ہوتے جاتے ہیں)",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 38,
      "text": "کیا ان میں سے ہر شخص یہ توقع رکھتا ہے کہ نعمت کے باغ میں داخل کیا جائے گا",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 39,
      "text": "ہرگز نہیں۔ ہم نے ان کو اس چیز سے پیدا کیا ہے جسے وہ جانتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 569,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 40,
      "text": "ہمیں مشرقوں اور مغربوں کے مالک کی قسم کہ ہم طاقت رکھتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 41,
      "text": "(یعنی) اس بات پر (قادر ہیں) کہ ان سے بہتر لوگ بدل لائیں اور ہم عاجز نہیں ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 42,
      "text": "تو (اے پیغمبر) ان کو باطل میں پڑے رہنے اور کھیل لینے دو یہاں تک کہ جس دن کا ان سے وعدہ کیا جاتا ہے وہ ان کے سامنے آ موجود ہو",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 43,
      "text": "اس دن یہ قبر سے نکل کر (اس طرح) دوڑیں گے جیسے (شکاری) شکار کے جال کی طرف دوڑتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    },
    {
      "number": 44,
      "text": "ان کی آنکھیں جھک رہی ہوں گی اور ذلت ان پر چھا رہی ہوگی۔ یہی وہ دن ہے جس کا ان سے وعدہ کیا جاتا تھا",
      "juz": 29,
      "manzil": 7,
      "page": 570,
      "ruku": 503,
      "hizbQuarter": 228,
      "sajda": false
    }
  ]
}