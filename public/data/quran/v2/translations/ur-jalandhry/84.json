{
  "number": 84,
  "name": "سُورَةُ الانشِقَاقِ",
  "englishName": "Al-Inshiqaaq",
  "ayahs": [
    {
      "number": 1,
      "text": "جب آسمان پھٹ جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور اپنے پروردگار کا فرمان بجا لائے گا اور اسے واجب بھی یہ ہی ہے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور جب زمین ہموار کر دی جائے گی",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 4,
      "text": "جو کچھ اس میں ہے اسے نکال کر باہر ڈال دے گی اور (بالکل) خالی ہو جائے گی",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5,
      "text": "اور اپنے پروردگار کے ارشاد کی تعمیل کرے گی اور اس کو لازم بھی یہی ہے (تو قیامت قائم ہو جائے گی)",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اے انسان! تو اپنے پروردگار کی طرف (پہنچنے میں) خوب کوشِش کرتا ہے سو اس سے جا ملے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 7,
      "text": "تو جس کا نامہٴ (اعمال) اس کے داہنے ہاتھ میں دیا جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اس سے حساب آسان لیا جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور وہ اپنے گھر والوں میں خوش خوش آئے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اور جس کا نامہٴ (اعمال) اس کی پیٹھ کے پیچھے سے دیا جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 11,
      "text": "وہ موت کو پکارے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اور وہ دوزخ میں داخل ہو گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 13,
      "text": "یہ اپنے اہل (و عیال) میں مست رہتا تھا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور خیال کرتا تھا کہ (خدا کی طرف) پھر کر نہ جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 15,
      "text": "ہاں ہاں۔ اس کا پروردگار اس کو دیکھ رہا تھا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 16,
      "text": "ہمیں شام کی سرخی کی قسم",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اور رات کی اور جن چیزوں کو وہ اکٹھا کر لیتی ہے ان کی",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اور چاند کی جب کامل ہو جائے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 19,
      "text": "کہ تم درجہ بدرجہ (رتبہٴ اعلیٰ پر) چڑھو گے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 20,
      "text": "تو ان لوگوں کو کیا ہوا ہے کہ ایمان نہیں لاتے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 21,
      "text": "اور جب ان کے سامنے قرآن پڑھا جاتا ہے تو سجدہ نہیں کرتے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": {
        "id": 14,
        "recommended": true,
        "obligatory": false
      }
    },
    {
      "number": 22,
      "text": "بلکہ کافر جھٹلاتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 23,
      "text": "اور خدا ان باتوں کو جو یہ اپنے دلوں میں چھپاتے ہیں خوب جانتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 24,
      "text": "تو ان کو دکھ دینے والے عذاب کی خبر سنا دو",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 25,
      "text": "ہاں جو لوگ ایمان لائے اور نیک عمل کرتے رہے ان کے لیے بےانتہا اجر ہے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    }
  ]
}