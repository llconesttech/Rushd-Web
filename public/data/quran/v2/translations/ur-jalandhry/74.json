{
  "number": 74,
  "name": "سُورَةُ المُدَّثِّرِ",
  "englishName": "Al-Muddaththir",
  "ayahs": [
    {
      "number": 1,
      "text": "اے (محمدﷺ) جو کپڑا لپیٹے پڑے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اُٹھو اور ہدایت کرو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور اپنے پروردگار کی بڑائی کرو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور اپنے کپڑوں کو پاک رکھو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5,
      "text": "اور ناپاکی سے دور رہو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اور (اس نیت سے) احسان نہ کرو کہ اس سے زیادہ کے طالب ہو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اور اپنے پروردگار کے لئے صبر کرو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 8,
      "text": "جب صور پھونکا جائے گا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 9,
      "text": "وہ دن کا مشکل دن ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 10,
      "text": "(یعنی) کافروں پر آسان نہ ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 11,
      "text": "ہمیں اس شخص سے سمجھ لینے دو جس کو ہم نے اکیلا پیدا کیا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اور مال کثیر دیا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 13,
      "text": "اور (ہر وقت اس کے پاس) حاضر رہنے والے بیٹے دیئے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور ہر طرح کے سامان میں وسعت دی",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 15,
      "text": "ابھی خواہش رکھتا ہے کہ اور زیادہ دیں",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 16,
      "text": "ایسا ہرگز نہیں ہوگا۔ یہ ہماری آیتیں کا دشمن رہا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 17,
      "text": "ہم اسے صعود پر چڑھائیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اس نے فکر کیا اور تجویز کی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 19,
      "text": "یہ مارا جائے اس نے کیسی تجویز کی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 20,
      "text": "پھر یہ مارا جائے اس نے کیسی تجویز کی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 21,
      "text": "پھر تامل کیا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 22,
      "text": "پھر تیوری چڑھائی اور منہ بگاڑ لیا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 23,
      "text": "پھر پشت پھیر کر چلا اور (قبول حق سے) غرور کیا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 24,
      "text": "پھر کہنے لگا کہ یہ تو جادو ہے جو (اگلوں سے) منتقل ہوتا آیا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 25,
      "text": "(پھر بولا) یہ (خدا کا کلام نہیں بلکہ) بشر کا کلام ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 26,
      "text": "ہم عنقریب اس کو سقر میں داخل کریں گے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اور تم کیا سمجھے کہ سقر کیا ہے؟",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 28,
      "text": "(وہ آگ ہے کہ) نہ باقی رکھے گی اور نہ چھوڑے گی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 29,
      "text": "اور بدن جھلس کر سیاہ کردے گی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 30,
      "text": "اس پر اُنیس داروغہ ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 31,
      "text": "اور ہم نے دوزخ کے داروغہ فرشتے بنائے ہیں۔ اور ان کا شمار کافروں کی آزمائش کے لئے مقرر کیا ہے (اور) اس لئے کہ اہل کتاب یقین کریں اور مومنوں کا ایمان اور زیادہ ہو اور اہل کتاب اور مومن شک نہ لائیں۔ اور اس لئے کہ جن لوگوں کے دلوں میں (نفاق کا) مرض ہے اور (جو) کافر (ہیں) کہیں کہ اس مثال (کے بیان کرنے) سے خدا کا مقصد کیا ہے؟ اسی طرح خدا جس کو چاہتا ہے گمراہ کرتا ہے اور جس کو چاہتا ہے ہدایت کرتا ہے اور تمہارے پروردگار کے لشکروں کو اس کے سوا کوئی نہیں جانتا۔ اور یہ تو بنی آدم کے لئے نصیحت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 32,
      "text": "ہاں ہاں (ہمیں) چاند کی قسم",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 33,
      "text": "اور رات کی جب پیٹھ پھیرنے لگے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 34,
      "text": "اور صبح کی جب روشن ہو",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 35,
      "text": "کہ وہ (آگ) ایک بہت بڑی (آفت) ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 36,
      "text": "(اور) بنی آدم کے لئے مؤجب خوف",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 37,
      "text": "جو تم میں سے آگے بڑھنا چاہے یا پیچھے رہنا چاہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 38,
      "text": "ہر شخص اپنے اعمال کے بدلے گرو ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 39,
      "text": "مگر داہنی طرف والے (نیک لوگ)",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 40,
      "text": "(کہ) وہ باغہائے بہشت میں (ہوں گے اور) پوچھتے ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 41,
      "text": "(یعنی آگ میں جلنے والے) گنہگاروں سے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 42,
      "text": "کہ تم دوزخ میں کیوں پڑے؟",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 43,
      "text": "وہ جواب دیں گے کہ ہم نماز نہیں پڑھتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 44,
      "text": "اور نہ فقیروں کو کھانا کھلاتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 45,
      "text": "اور اہل باطل کے ساتھ مل کر (حق سے) انکار کرتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 46,
      "text": "اور روز جزا کو جھٹلاتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 47,
      "text": "یہاں تک کہ ہمیں موت آگئی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 48,
      "text": "(تو اس حال میں) سفارش کرنے والوں کی سفارش ان کے حق میں کچھ فائدہ نہ دے گی",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 49,
      "text": "ان کو کیا ہوا ہے کہ نصیحت سے روگرداں ہو رہے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 50,
      "text": "گویا گدھے ہیں کہ بدک جاتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 51,
      "text": "(یعنی) شیر سے ڈر کر بھاگ جاتے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 52,
      "text": "اصل یہ ہے کہ ان میں سے ہر شخص یہ چاہتا ہے کہ اس کے پاس کھلی ہوئی کتاب آئے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 53,
      "text": "ایسا ہرگز نہیں ہوگا۔ حقیقت یہ ہے کہ ان کو آخرت کا خوف ہی نہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 54,
      "text": "کچھ شک نہیں کہ یہ نصیحت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 55,
      "text": "تو جو چاہے اسے یاد رکھے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 56,
      "text": "اور یاد بھی تب ہی رکھیں گے جب خدا چاہے۔ وہی ڈرنے کے لائق اور بخشش کا مالک ہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    }
  ]
}