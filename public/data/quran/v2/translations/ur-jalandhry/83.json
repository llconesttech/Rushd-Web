{
  "number": 83,
  "name": "سُورَةُ المُطَفِّفِينَ",
  "englishName": "Al-Mutaffifin",
  "ayahs": [
    {
      "number": 1,
      "text": "ناپ اور تول میں کمی کرنے والوں کے لیے خرابی ہے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 2,
      "text": "جو لوگوں سے ناپ کر لیں تو پورا لیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور جب ان کو ناپ کر یا تول کر دیں تو کم کر دیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 4,
      "text": "کیا یہ لوگ نہیں جانتے کہ اٹھائے بھی جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5,
      "text": "(یعنی) ایک بڑے (سخت) دن میں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 6,
      "text": "جس دن (تمام) لوگ رب العالمین کے سامنے کھڑے ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 7,
      "text": "سن رکھو کہ بدکارروں کے اعمال سجّین میں ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور تم کیا جانتے ہوں کہ سجّین کیا چیز ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 9,
      "text": "ایک دفتر ہے لکھا ہوا",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اس دن جھٹلانے والوں کی خرابی ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 11,
      "text": "(یعنی) جو انصاف کے دن کو جھٹلاتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اور اس کو جھٹلاتا وہی ہے جو حد سے نکل جانے والا گنہگار ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 13,
      "text": "جب اس کو ہماری آیتیں سنائی جاتی ہیں تو کہتا ہے کہ یہ تو اگلے لوگوں کے افسانے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 14,
      "text": "دیکھو یہ جو (اعمال بد) کرتے ہیں ان کا ان کے دلوں پر زنگ بیٹھ گیا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 15,
      "text": "بےشک یہ لوگ اس روز اپنے پروردگار (کے دیدار) سے اوٹ میں ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 16,
      "text": "پھر دوزخ میں جا داخل ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 17,
      "text": "پھر ان سے کہا جائے گا کہ یہ وہی چیز ہے جس کو تم جھٹلاتے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 18,
      "text": "(یہ بھی) سن رکھو کہ نیکوکاروں کے اعمال علیین میں ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 19,
      "text": "اور تم کو کیا معلوم کہ علیین کیا چیز ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 20,
      "text": "ایک دفتر ہے لکھا ہوا",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 21,
      "text": "جس کے پاس مقرب (فرشتے) حاضر رہتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 22,
      "text": "بےشک نیک لوگ چین میں ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 23,
      "text": "تختوں پر بیٹھے ہوئے نظارے کریں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 24,
      "text": "تم ان کے چہروں ہی سے راحت کی تازگی معلوم کر لو گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 25,
      "text": "ان کو خالص شراب سربمہر پلائی جائے گی",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 26,
      "text": "جس کی مہر مشک کی ہو گی تو (نعمتوں کے) شائقین کو چاہیے کہ اسی سے رغبت کریں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اور اس میں تسنیم (کے پانی) کی آمیزش ہو گی",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 28,
      "text": "وہ ایک چشمہ ہے جس میں سے (خدا کے) مقرب پیئیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 29,
      "text": "جو گنہگار (یعنی کفار) ہیں وہ (دنیا میں) مومنوں سے ہنسی کیا کرتے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 30,
      "text": "اور جب ان کے پاس سے گزرتے تو حقارت سے اشارے کرتے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 31,
      "text": "اور جب اپنے گھر کو لوٹتے تو اتراتے ہوئے لوٹتے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 32,
      "text": "اور جب ان (مومنوں) کو دیکھتے تو کہتے کہ یہ تو گمراہ ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 33,
      "text": "حالانکہ وہ ان پر نگراں بنا کر نہیں بھیجے گئے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 34,
      "text": "تو آج مومن کافروں سے ہنسی کریں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 35,
      "text": "(اور) تختوں پر (بیٹھے ہوئے ان کا حال) دیکھ رہے ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 36,
      "text": "تو کافروں کو ان کے عملوں کا (پورا پورا) بدلہ مل گیا",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    }
  ]
}