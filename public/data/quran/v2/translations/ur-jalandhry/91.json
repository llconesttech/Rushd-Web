{
  "number": 91,
  "name": "سُورَةُ الشَّمۡسِ",
  "englishName": "Ash-Shams",
  "ayahs": [
    {
      "number": 1,
      "text": "سورج کی قسم اور اس کی روشنی کی",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور چاند کی جب اس کے پیچھے نکلے",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور دن کی جب اُسے چمکا دے",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور رات کی جب اُسے چھپا لے",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 5,
      "text": "اور آسمان کی اور اس ذات کی جس نے اسے بنایا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اور زمین کی اور اس کی جس نے اسے پھیلایا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اور انسان کی اور اس کی جس نے اس (کے اعضا) کو برابر کیا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 8,
      "text": "پھر اس کو بدکاری (سے بچنے) اور پرہیزگاری کرنے کی سمجھ دی",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 9,
      "text": "کہ جس نے (اپنے) نفس (یعنی روح) کو پاک رکھا وہ مراد کو پہنچا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اور جس نے اسے خاک میں ملایا وہ خسارے میں رہا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 11,
      "text": "(قوم) ثمود نے اپنی سرکشی کے سبب (پیغمبر کو) جھٹلایا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 12,
      "text": "جب ان میں سے ایک نہایت بدبخت اٹھا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 13,
      "text": "تو خدا کے پیغمبر (صالح) نے ان سے کہا کہ خدا کی اونٹنی اور اس کے پانی پینے کی باری سے عذر کرو",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 14,
      "text": "مگر انہوں نے پیغمبر کو جھٹلایا اور اونٹنی کی کونچیں کاٹ دیں تو خدا نے ان کےگناہ کے سبب ان پر عذاب نازل کیا اور سب کو (ہلاک کر کے) برابر کر دیا",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 15,
      "text": "اور اس کو ان کے بدلہ لینے کا کچھ بھی ڈر نہیں",
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    }
  ]
}