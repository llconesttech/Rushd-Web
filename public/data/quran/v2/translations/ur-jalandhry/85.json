{
  "number": 85,
  "name": "سُورَةُ البُرُوجِ",
  "englishName": "Al-Burooj",
  "ayahs": [
    {
      "number": 1,
      "text": "آسمان کی قسم جس میں برج ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور اس دن کی جس کا وعدہ ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور حاضر ہونے والے کی اور جو اس کے پاس حاضر کیا جائے اسکی",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 4,
      "text": "کہ خندقوں (کے کھودنے) والے ہلاک کر دیئے گئے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5,
      "text": "(یعنی) آگ (کی خندقیں) جس میں ایندھن (جھونک رکھا) تھا",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 6,
      "text": "جب کہ وہ ان (کے کناروں) پر بیٹھے ہوئے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اور جو (سختیاں) اہل ایمان پر کر رہے تھے ان کو سامنے دیکھ رہے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 8,
      "text": "ان کو مومنوں کی یہی بات بری لگتی تھی کہ وہ خدا پر ایمان لائے ہوئے تھے جو غالب (اور) قابل ستائش ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 9,
      "text": "وہی جس کی آسمانوں اور زمین میں بادشاہت ہے۔ اور خدا ہر چیز سے واقف ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 10,
      "text": "جن لوگوں نے مومن مردوں اور مومن عورتوں کو تکلیفیں دیں اور توبہ نہ کی ان کو دوزخ کا (اور) عذاب بھی ہوگا اور جلنے کا عذاب بھی ہوگا",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 11,
      "text": "(اور) جو لوگ ایمان لائے اور نیک کام کرتے رہے ان کے لیے باغات ہیں جن کے نیچے نہریں بہہ رہی ہیں۔ یہ ہی بڑی کامیابی ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 12,
      "text": "بےشک تمہارے پروردگار کی پکڑ بڑی سخت ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 13,
      "text": "وہی پہلی دفعہ پیدا کرتا ہے اور وہی دوبارہ (زندہ) کرے گا",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور وہ بخشنے والا اور محبت کرنے والا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 15,
      "text": "عرش کا مالک بڑی شان والا",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 16,
      "text": "جو چاہتا ہے کر دیتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 17,
      "text": "بھلا تم کو لشکروں کا حال معلوم ہوا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 18,
      "text": "(یعنی) فرعون اور ثمود کا",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 19,
      "text": "لیکن کافر (جان بوجھ کر) تکذیب میں (گرفتار) ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 20,
      "text": "اور خدا (بھی) ان کو گردا گرد سے گھیرے ہوئے ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 21,
      "text": "(یہ کتاب ہزل و بطلان نہیں) بلکہ یہ قرآن عظیم الشان ہے",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 22,
      "text": "لوح محفوظ میں (لکھا ہوا)",
      "juz": 30,
      "manzil": 7,
      "page": 590,
      "ruku": 527,
      "hizbQuarter": 236,
      "sajda": false
    }
  ]
}