{
  "number": 80,
  "name": "سُورَةُ عَبَسَ",
  "englishName": "Abasa",
  "ayahs": [
    {
      "number": 1,
      "text": "(محمد مصطفٰےﷺ) ترش رُو ہوئے اور منہ پھیر بیٹھے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 2,
      "text": "کہ ان کے پاس ایک نابینا آیا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور تم کو کیا خبر شاید وہ پاکیزگی حاصل کرتا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 4,
      "text": "یا سوچتا تو سمجھانا اسے فائدہ دیتا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5,
      "text": "جو پروا نہیں کرتا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اس کی طرف تو تم توجہ کرتے ہو",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 7,
      "text": "حالانکہ اگر وہ نہ سنورے تو تم پر کچھ (الزام) نہیں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور جو تمہارے پاس دوڑتا ہوا آیا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور (خدا سے) ڈرتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اس سے تم بےرخی کرتے ہو",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 11,
      "text": "دیکھو یہ (قرآن) نصیحت ہے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 12,
      "text": "پس جو چاہے اسے یاد رکھے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 13,
      "text": "قابل ادب ورقوں میں (لکھا ہوا)",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 14,
      "text": "جو بلند مقام پر رکھے ہوئے (اور) پاک ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 15,
      "text": "لکھنے والوں کے ہاتھوں میں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 16,
      "text": "جو سردار اور نیکو کار ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 17,
      "text": "انسان ہلاک ہو جائے کیسا ناشکرا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اُسے (خدا نے) کس چیز سے بنایا؟",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 19,
      "text": "نطفے سے بنایا پھر اس کا اندازہ مقرر کیا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 20,
      "text": "پھر اس کے لیے رستہ آسان کر دیا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 21,
      "text": "پھر اس کو موت دی پھر قبر میں دفن کرایا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 22,
      "text": "پھر جب چاہے گا اسے اٹھا کھڑا کرے گا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 23,
      "text": "کچھ شک نہیں کہ خدا نے اسے جو حکم دیا اس نے اس پر عمل نہ کیا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 24,
      "text": "تو انسان کو چاہیئے کہ اپنے کھانے کی طرف نظر کرے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 25,
      "text": "بے شک ہم ہی نے پانی برسایا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 26,
      "text": "پھر ہم ہی نے زمین کو چیرا پھاڑا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 27,
      "text": "پھر ہم ہی نے اس میں اناج اگایا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 28,
      "text": "اور انگور اور ترکاری",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 29,
      "text": "اور زیتون اور کھجوریں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 30,
      "text": "اور گھنے گھنے باغ",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 31,
      "text": "اور میوے اور چارا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 32,
      "text": "(یہ سب کچھ) تمہارے اور تمہارے چارپایوں کے لیے بنایا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 33,
      "text": "تو جب (قیامت کا) غل مچے گا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 34,
      "text": "اس دن آدمی اپنے بھائی سے دور بھاگے گا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 35,
      "text": "اور اپنی ماں اور اپنے باپ سے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 36,
      "text": "اور اپنی بیوی اور اپنے بیٹے سے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 37,
      "text": "ہر شخص اس روز ایک فکر میں ہو گا جو اسے (مصروفیت کے لیے) بس کرے گا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 38,
      "text": "اور کتنے منہ اس روز چمک رہے ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 39,
      "text": "خنداں و شاداں (یہ مومنان نیکو کار ہیں)",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 40,
      "text": "اور کتنے منہ ہوں گے جن پر گرد پڑ رہی ہو گی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 41,
      "text": "(اور) سیاہی چڑھ رہی ہو گی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 42,
      "text": "یہ کفار بدکردار ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    }
  ]
}