{
  "number": 69,
  "name": "سُورَةُ الحَاقَّةِ",
  "englishName": "Al-Haaqqa",
  "ayahs": [
    {
      "number": 1,
      "text": "سچ مچ ہونے والی",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 2,
      "text": "وہ سچ مچ ہونے والی کیا ہے؟",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور تم کو کیا معلوم ہے کہ سچ مچ ہونے والی کیا ہے؟",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 4,
      "text": "کھڑکھڑانے والی (جس) کو ثمود اور عاد (دونوں) نے جھٹلایا",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 5,
      "text": "سو ثمود تو کڑک سے ہلاک کردیئے گئے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 6,
      "text": "رہے عاد تو ان کا نہایت تیز آندھی سے ستیاناس کردیا گیا",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 7,
      "text": "خدا نے اس کو سات رات اور آٹھ دن لگاتار ان پر چلائے رکھا تو (اے مخاطب) تو لوگوں کو اس میں (اس طرح) ڈھئے (اور مرے) پڑے دیکھے جیسے کھجوروں کے کھوکھلے تنے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 8,
      "text": "بھلا تو ان میں سے کسی کو بھی باقی دیکھتا ہے؟",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور فرعون اور جو لوگ اس سے پہلے تھے اور وہ جو الٹی بستیوں میں رہتے تھے سب گناہ کے کام کرتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 10,
      "text": "انہوں نے اپنے پروردگار کے پیغمبر کی نافرمانی کی تو خدا نے بھی ان کو بڑا سخت پکڑا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 11,
      "text": "جب پانی طغیانی پر آیا تو ہم نے تم (لوگوں) کو کشتی میں سوار کرلیا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 12,
      "text": "تاکہ اس کو تمہارے لئے یادگار بنائیں اور یاد رکھنے والے کان اسے یاد رکھیں",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 13,
      "text": "تو جب صور میں ایک (بار) پھونک مار دی جائے گی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور زمین اور پہاڑ دونوں اٹھا لئے جائیں گے۔ پھر ایک بارگی توڑ پھوڑ کر برابر کردیئے جائیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 15,
      "text": "تو اس روز ہو پڑنے والی (یعنی قیامت) ہو پڑے گی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 16,
      "text": "اور آسمان پھٹ جائے گا تو وہ اس دن کمزور ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اور فرشتے اس کے کناروں پر (اُتر آئیں گے) اور تمہارے پروردگار کے عرش کو اس روز آٹھ فرشتے اپنے سروں پر اُٹھائے ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اس روز تم (سب لوگوں کے سامنے) پیش کئے جاؤ گے اور تمہاری کوئی پوشیدہ بات چھپی نہ رہے گی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 19,
      "text": "تو جس کا (اعمال) نامہ اس کے داہنے ہاتھ میں دیا جائے گا وہ (دوسروں سے) کہے گا کہ لیجیئے میرا نامہ (اعمال) پڑھیئے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 20,
      "text": "مجھے یقین تھا کہ مجھ کو میرا حساب (کتاب) ضرور ملے گا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 21,
      "text": "پس وہ (شخص) من مانے عیش میں ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 22,
      "text": "(یعنی) اونچے (اونچے محلوں) کے باغ میں",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 23,
      "text": "جن کے میوے جھکے ہوئے ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 24,
      "text": "جو (عمل) تم ایام گزشتہ میں آگے بھیج چکے ہو اس کے صلے میں مزے سے کھاؤ اور پیو",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 25,
      "text": "اور جس کا نامہ (اعمال) اس کے بائیں ہاتھ میں یاد جائے گا وہ کہے گا اے کاش مجھ کو میرا (اعمال) نامہ نہ دیا جاتا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 26,
      "text": "اور مجھے معلوم نہ ہو کہ میرا حساب کیا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اے کاش موت (ابد الاآباد کے لئے میرا کام) تمام کرچکی ہوتی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 28,
      "text": "آج) میرا مال میرے کچھ بھی کام بھی نہ آیا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 29,
      "text": "(ہائے) میری سلطنت خاک میں مل گئی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 30,
      "text": "(حکم ہوگا کہ) اسے پکڑ لو اور طوق پہنا دو",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 31,
      "text": "پھر دوزخ کی آگ میں جھونک دو",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 32,
      "text": "پھر زنجیر سے جس کی ناپ ستر گز ہے جکڑ دو",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 33,
      "text": "یہ نہ تو خدائے جل شانہ پر ایمان لاتا تھا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 34,
      "text": "اور نہ فقیر کے کھانا کھلانے پر آمادہ کرتا تھا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 35,
      "text": "سو آج اس کا بھی یہاں کوئی دوستدار نہیں",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 36,
      "text": "اور نہ پیپ کے سوا (اس کے لئے) کھانا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 37,
      "text": "جس کو گنہگاروں کے سوا کوئی نہیں کھائے گا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 38,
      "text": "تو ہم کو ان چیزوں کی قسم جو تم کو نظر آتی ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 39,
      "text": "اور ان کی جو نظر میں نہیں آتیں",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 40,
      "text": "کہ یہ (قرآن) فرشتہٴ عالی مقام کی زبان کا پیغام ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 41,
      "text": "اور یہ کسی شاعر کا کلام نہیں۔ مگر تم لوگ بہت ہی کم ایمان لاتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 42,
      "text": "اور نہ کسی کاہن کے مزخرفات ہیں۔ لیکن تم لوگ بہت ہی کم فکر کرتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 43,
      "text": "یہ تو) پروردگار عالم کا اُتارا (ہوا) ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 44,
      "text": "اگر یہ پیغمبر ہماری نسبت کوئی بات جھوٹ بنا لاتے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 45,
      "text": "تو ہم ان کا داہنا ہاتھ پکڑ لیتے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 46,
      "text": "پھر ان کی رگ گردن کاٹ ڈالتے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 47,
      "text": "پھر تم میں سے کوئی (ہمیں) اس سے روکنے والا نہ ہوتا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 48,
      "text": "اور یہ (کتاب) تو پرہیزگاروں کے لئے نصیحت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 49,
      "text": "اور ہم جانتے ہیں کہ تم میں سے بعض اس کو جھٹلانے والے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 50,
      "text": "نیز یہ کافروں کے لئے (موجب) حسرت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 51,
      "text": "اور کچھ شک نہیں کہ یہ برحق قابل یقین ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 52,
      "text": "سو تم اپنے پروردگار عزوجل کے نام کی تنزیہ کرتے رہو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    }
  ]
}