{
  "number": 83,
  "name": "سُورَةُ المُطَفِّفِينَ",
  "englishName": "Al-Mutaffifin",
  "ayahs": [
    {
      "number": 1,
      "text": "تباہی ہے ڈنڈی مارنے والوں کے لیے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 2,
      "text": "جن کا حال یہ ہے کہ جب لوگوں سے لیتے ہیں تو پورا پورا لیتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور جب ان کو ناپ کر یا تول کر دیتے ہیں تو انہیں گھاٹا دیتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 4,
      "text": "کیا یہ لوگ نہیں سمجھتے کہ ایک بڑے دن،",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5,
      "text": "یہ اٹھا کر لائے جانے والے ہیں؟",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اُس دن جبکہ سب لوگ رب العالمین کے سامنے کھڑے ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 7,
      "text": "ہرگز نہیں، یقیناً بد کاروں کا نامہ اعمال قید خانے کے دفتر میں ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور تمہیں کیا معلوم کہ وہ قید خانے کا دفتر کیا ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 9,
      "text": "ایک کتاب ہے لکھی ہوئی",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 10,
      "text": "تباہی ہے اُس روز جھٹلانے والوں کے لیے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 11,
      "text": "جو روز جزا کو جھٹلاتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اور اُسے نہیں جھٹلاتا مگر ہر وہ شخص جو حد سے گزر جانے والا بد عمل ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 13,
      "text": "اُسے جب ہماری آیات سنائی جاتی ہیں تو کہتا ہے یہ تو اگلے وقتوں کی کہانیاں ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 14,
      "text": "ہرگز نہیں، بلکہ دراصل اِن لوگوں کے دلوں پر اِن کے برے اعمال کا زنگ چڑھ گیا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 15,
      "text": "ہرگز نہیں، بالیقین اُس روز یہ اپنے رب کی دید سے محروم رکھے جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 16,
      "text": "پھر یہ جہنم میں جا پڑیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 17,
      "text": "پھر اِن سے کہا جائے گا کہ یہ وہی چیز ہے جسے تم جھٹلایا کرتے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 18,
      "text": "ہرگز نہیں، بے شک نیک آدمیوں کا نامہ اعمال بلند پایہ لوگوں کے دفتر میں ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 19,
      "text": "اور تمہیں کیا خبر کہ کیا ہے وہ بلند پایہ لوگوں کا دفتر؟",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 20,
      "text": "ایک لکھی ہوئی کتاب ہے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 21,
      "text": "جس کی نگہداشت مقرب فرشتے کرتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 22,
      "text": "بے شک نیک لوگ بڑے مزے میں ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 23,
      "text": "اونچی مسندوں پر بیٹھے نظارے کر رہے ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 24,
      "text": "ان کے چہروں پر تم خوشحالی کی رونق محسوس کرو گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 25,
      "text": "ان کو نفیس ترین سر بند شراب پلائی جائے گی جس پر مشک کی مہر لگی ہوگی",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 26,
      "text": "جو لوگ دوسروں پر بازی لے جانا چاہتے ہوں وہ اِس چیز کو حاصل کرنے میں بازی لے جانے کی کوشش کریں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اُس شراب میں تسنیم کی آمیزش ہوگی",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 28,
      "text": "یہ ایک چشمہ ہے جس کے پانی کے ساتھ مقرب لوگ شراب پئیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 29,
      "text": "مجرم لوگ دنیا میں ایمان لانے والوں کا مذاق اڑاتے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 30,
      "text": "جب اُن کے پاس سے گزرتے تو آنکھیں مار مار کر اُن کی طرف اشارے کرتے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 31,
      "text": "اپنے گھروں کی طرف پلٹتے تو مزے لیتے ہوئے پلٹتے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 32,
      "text": "اور جب انہیں دیکھتے تو کہتے تھے کہ یہ بہکے ہوئے لوگ ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 33,
      "text": "حالانکہ وہ اُن پر نگراں بنا کر نہیں بھیجے گئے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 34,
      "text": "آج ایمان لانے والے کفار پر ہنس رہے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 35,
      "text": "مسندوں پر بیٹھے ہوئے ان کا حال دیکھ رہے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 36,
      "text": "مل گیا نا کافروں کو اُن حرکتوں کا ثواب جو وہ کیا کرتے تھے",
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    }
  ]
}