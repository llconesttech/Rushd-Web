{
  "number": 82,
  "name": "سُورَةُ الانفِطَارِ",
  "englishName": "Al-Infitaar",
  "ayahs": [
    {
      "number": 1,
      "text": "جب آسمان پھٹ جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور جب تارے بکھر جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور جب سمندر پھاڑ دیے جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور جب قبریں کھول دی جائیں گی",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5,
      "text": "اُس وقت ہر شخص کو اُس کا اگلا پچھلا سب کیا دھرا معلوم ہو جائے گا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اے انسان، کس چیز نے تجھے اپنے اُس رب کریم کی طرف سے دھوکے میں ڈال دیا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 7,
      "text": "جس نے تجھے پیدا کیا، تجھے نک سک سے درست کیا، تجھے متناسب بنایا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور جس صورت میں چاہا تجھ کو جوڑ کر تیار کیا؟",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 9,
      "text": "ہرگز نہیں، بلکہ (اصل بات یہ ہے کہ) تم لوگ جزا و سزا کو جھٹلاتے ہو",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 10,
      "text": "حالانکہ تم پر نگراں مقرر ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 11,
      "text": "ایسے معزز کاتب",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 12,
      "text": "جو تمہارے ہر فعل کو جانتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 13,
      "text": "یقیناً نیک لوگ مزے میں ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور بے شک بدکار لوگ جہنم میں جائیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 15,
      "text": "جزا کے دن وہ اس میں داخل ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 16,
      "text": "اور اُس سے ہرگز غائب نہ ہو سکیں گے",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 17,
      "text": "اور تم کیا جانتے ہو کہ وہ جزا کا دن کیا ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 18,
      "text": "ہاں، تمہیں کیا خبر کہ وہ جزا کا دن کیا ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 19,
      "text": "یہ وہ دن ہے جب کسی شخص کے لیے کچھ کرنا کسی کے بس میں نہ ہوگا، فیصلہ اُس دن بالکل اللہ کے اختیار میں ہوگا",
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    }
  ]
}