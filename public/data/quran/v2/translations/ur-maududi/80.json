{
  "number": 80,
  "name": "سُورَةُ عَبَسَ",
  "englishName": "Abasa",
  "ayahs": [
    {
      "number": 1,
      "text": "ترش رو ہوا، اور بے رخی برتی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اِس بات پر کہ وہ اندھا اُس کے پاس آ گیا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 3,
      "text": "تمہیں کیا خبر، شاید وہ سدھر جائے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 4,
      "text": "یا نصیحت پر دھیان دے، اور نصیحت کرنا اس کے لیے نافع ہو؟",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5,
      "text": "جو شخص بے پروائی برتتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اس کی طرف تو تم توجہ کرتے ہو",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 7,
      "text": "حالانکہ اگر وہ نہ سدھرے تو تم پر اس کی کیا ذمہ داری ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور جو خود تمہارے پاس دوڑا آتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور وہ ڈر رہا ہوتا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اس سے تم بے رخی برتتے ہو",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 11,
      "text": "ہرگز نہیں، یہ تو ایک نصیحت ہے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 12,
      "text": "جس کا جی چاہے اِسے قبول کرے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 13,
      "text": "یہ ایسے صحیفوں میں درج ہے جو مکرم ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 14,
      "text": "بلند مرتبہ ہیں، پاکیزہ ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 15,
      "text": "معزز اور نیک کاتبوں کے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 16,
      "text": "ہاتھوں میں رہتے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 17,
      "text": "لعنت ہو انسان پر، کیسا سخت منکر حق ہے یہ",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 18,
      "text": "کس چیز سے اللہ نے اِسے پیدا کیا ہے؟",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 19,
      "text": "نطفہ کی ایک بوند سے اللہ نے اِسے پیدا کیا، پھر اِس کی تقدیر مقرر کی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 20,
      "text": "پھر اِس کے لیے زندگی کی راہ آسان کی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 21,
      "text": "پھر اِسے موت دی اور قبر میں پہنچایا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 22,
      "text": "پھر جب چاہے وہ اِسے دوبارہ اٹھا کھڑا کرے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 23,
      "text": "ہرگز نہیں، اِس نے وہ فرض ادا نہیں کیا جس کا اللہ نے اِسے حکم دیا تھا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 24,
      "text": "پھر ذرا انسان اپنی خوراک کو دیکھے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 25,
      "text": "ہم نے خوب پانی لنڈھایا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 26,
      "text": "پھر زمین کو عجیب طرح پھاڑا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 27,
      "text": "پھر اُس کے اندر اگائے غلے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 28,
      "text": "اور انگور اور ترکاریاں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 29,
      "text": "اور زیتون اور کھجوریں",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 30,
      "text": "اور گھنے باغ",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 31,
      "text": "اور طرح طرح کے پھل، اور چارے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 32,
      "text": "تمہارے لیے اور تمہارے مویشیوں کے لیے سامان زیست کے طور پر",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 33,
      "text": "آخرکار جب وہ کان بہرے کر دینے والی آواز بلند ہوگی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 34,
      "text": "اُس روز آدمی اپنے بھائی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 35,
      "text": "اور اپنی ماں اور اپنے باپ",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 36,
      "text": "اور اپنی بیوی اور اپنی اولاد سے بھاگے گا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 37,
      "text": "ان میں سے ہر شخص پر اس دن ایسا وقت آ پڑے گا کہ اسے اپنے سوا کسی کا ہوش نہ ہوگا",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 38,
      "text": "کچھ چہرے اُس روز دمک رہے ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 39,
      "text": "ہشاش بشاش اور خوش و خرم ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 40,
      "text": "اور کچھ چہروں پر اس روز خاک اڑ رہی ہوگی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 41,
      "text": "اور کلونس چھائی ہوئی ہوگی",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 42,
      "text": "یہی کافر و فاجر لوگ ہوں گے",
      "juz": 30,
      "manzil": 7,
      "page": 585,
      "ruku": 522,
      "hizbQuarter": 234,
      "sajda": false
    }
  ]
}