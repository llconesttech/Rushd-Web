{
  "number": 90,
  "name": "سُورَةُ البَلَدِ",
  "englishName": "Al-Balad",
  "ayahs": [
    {
      "number": 1,
      "text": "نہیں، میں قسم کھاتا ہوں اِس شہر کی",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور حال یہ ہے کہ (اے نبیؐ) اِس شہر میں تم کو حلال کر لیا گیا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور قسم کھاتا ہوں باپ کی اور اس اولاد کی جو اس سے پیدا ہوئی",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 4,
      "text": "درحقیقت ہم نے انسان کو مشقت میں پیدا کیا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 5,
      "text": "کیا اُس نے یہ سمجھ رکھا ہے کہ اُس پر کوئی قابو نہ پا سکے گا؟",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6,
      "text": "کہتا ہے کہ میں نے ڈھیروں مال اڑا دیا",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 7,
      "text": "کیا وہ سمجھتا ہے کہ کسی نے اُس کو نہیں دیکھا؟",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 8,
      "text": "کیا ہم نے اُسے دو آنکھیں",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور ایک زبان اور دو ہونٹ نہیں دیے؟",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 10,
      "text": "اور دونوں نمایاں راستے اُسے (نہیں) دکھا دیے؟",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 11,
      "text": "مگر اس نے دشوار گزار گھاٹی سے گزرنے کی ہمت نہ کی",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 12,
      "text": "اور تم کیا جانو کہ کیا ہے وہ دشوار گزار گھاٹی؟",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 13,
      "text": "کسی گردن کو غلامی سے چھڑانا",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 14,
      "text": "یا فاقے کے دن",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 15,
      "text": "کسی قریبی یتیم",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 16,
      "text": "یا خاک نشین مسکین کو کھانا کھلانا",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 17,
      "text": "پھر (اس کے ساتھ یہ کہ) آدمی اُن لوگوں میں شامل ہو جو ایمان لائے اور جنہوں نے ایک دوسرے کو صبر اور (خلق خدا پر) رحم کی تلقین کی",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 18,
      "text": "یہ لوگ ہیں دائیں بازو والے",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 19,
      "text": "اور جنہوں نے ہماری آیات کو ماننے سے انکار کیا وہ بائیں بازو والے ہیں",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 20,
      "text": "ان پر آگ چھائی ہوئی ہوگی",
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    }
  ]
}