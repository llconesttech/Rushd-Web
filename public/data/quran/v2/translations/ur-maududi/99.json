{
  "number": 99,
  "name": "سُورَةُ الزَّلۡزَلَةِ",
  "englishName": "Az-Zalzala",
  "ayahs": [
    {
      "number": 1,
      "text": "جب زمین اپنی پوری شدت کے ساتھ ہلا ڈالی جائے گی",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اور زمین اپنے اندر کے سارے بوجھ نکال کر باہر ڈال دے گی",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور انسان کہے گا کہ یہ اِس کو کیا ہو رہا ہے",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اُس روز وہ اپنے (اوپر گزرے ہوئے) حالات بیان کرے گی",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 5,
      "text": "کیونکہ تیرے رب نے اُسے (ایساکرنے کا) حکم دیا ہوگا",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اُس روز لوگ متفرق حالت میں پلٹیں گے تاکہ اُن کے اعمال اُن کو دکھائے جائیں",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 7,
      "text": "پھر جس نے ذرہ برابر نیکی کی ہوگی وہ اس کو دیکھ لے گا",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اور جس نے ذرہ برابر بدی کی ہوگی وہ اس کو دیکھ لے گا",
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    }
  ]
}