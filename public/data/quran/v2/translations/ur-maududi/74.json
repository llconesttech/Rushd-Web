{
  "number": 74,
  "name": "سُورَةُ المُدَّثِّرِ",
  "englishName": "Al-Muddaththir",
  "ayahs": [
    {
      "number": 1,
      "text": "اے اوڑھ لپیٹ کر لیٹنے والے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 2,
      "text": "اٹھو اور خبردار کرو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور اپنے رب کی بڑائی کا اعلان کرو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 4,
      "text": "اور اپنے کپڑے پاک رکھو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5,
      "text": "اور گندگی سے دور رہو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اور احسان نہ کرو زیادہ حاصل کرنے کے لیے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اور اپنے رب کی خاطر صبر کرو",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اچھا، جب صور میں پھونک ماری جائے گی",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 9,
      "text": "وہ دن بڑا ہی سخت دن ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 10,
      "text": "کافروں کے لیے ہلکا نہ ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 11,
      "text": "چھوڑ دو مجھے اور اُس شخص کو جسے میں نے اکیلا پیدا کیا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 12,
      "text": "بہت سا مال اُس کو دیا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 13,
      "text": "اس کے ساتھ حاضر رہنے والے بیٹے دیے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور اس کے لیے ریاست کی راہ ہموار کی",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 15,
      "text": "پھر وہ طمع رکھتا ہے کہ میں اسے اور زیادہ دوں",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 16,
      "text": "ہرگز نہیں، وہ ہماری آیات سے عناد رکھتا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 17,
      "text": "میں تو اسے عنقریب ایک کٹھن چڑھائی چڑھواؤں گا",
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 18,
      "text": "اس نے سوچا اور کچھ بات بنانے کی کوشش کی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 19,
      "text": "تو خدا کی مار اس پر، کیسی بات بنانے کی کوشش کی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 20,
      "text": "ہاں، خدا کی مار اُس پر، کیسی بات بنانے کی کوشش کی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 21,
      "text": "پھر (لوگوں کی طرف) دیکھا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 22,
      "text": "پھر پیشانی سیکڑی اور منہ بنایا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 23,
      "text": "پھر پلٹا اور تکبر میں پڑ گیا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 24,
      "text": "آخرکار بولا کہ یہ کچھ نہیں ہے مگر ایک جادو جو پہلے سے چلا آ رہا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 25,
      "text": "یہ تو یہ ایک انسانی کلام ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 26,
      "text": "عنقریب میں اسے دوزخ میں جھونک دوں گا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 27,
      "text": "اور تم کیا جانو کہ کیا ہے وہ دوزخ؟",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 28,
      "text": "نہ باقی رکھے نہ چھوڑے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 29,
      "text": "کھال جھلس دینے والی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 30,
      "text": "انیس کارکن اُس پر مقرر ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 31,
      "text": "ہم نے دوزخ کے یہ کارکن فرشتے بنائے ہیں، اور ان کی تعداد کو کافروں کے لیے فتنہ بنا دیا ہے، تاکہ اہل کتاب کو یقین آ جائے اور ایمان لانے والوں کا ایمان بڑھے، اور اہل کتاب اور مومنین کسی شک میں نہ رہیں، اور دل کے بیمار اور کفار یہ کہیں کہ بھلا اللہ کا اِس عجیب بات سے کیا مطلب ہو سکتا ہے اِس طرح اللہ جسے چاہتا ہے گمراہ کر دیتا ہے اور جسے چاہتا ہے ہدایت بخش دیتا ہے اور تیرے رب کے لشکروں کو خود اُس کے سوا کوئی نہیں جانتا اور اس دوزخ کا ذکر اِس کے سوا کسی غرض کے لیے نہیں کیا گیا ہے کہ لوگوں کو اس سے نصیحت ہو",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 32,
      "text": "ہرگز نہیں، قسم ہے چاند کی",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 33,
      "text": "اور رات کی جبکہ وہ پلٹتی ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 34,
      "text": "اور صبح کی جبکہ وہ روشن ہوتی ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 35,
      "text": "یہ دوزخ بھی بڑی چیزوں میں سے ایک ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 36,
      "text": "انسانوں کے لیے ڈراوا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 37,
      "text": "تم میں سے ہر اُس شخص کے لیے ڈراوا جو آگے بڑھنا چاہے یا پیچھے رہ جانا چاہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 38,
      "text": "ہر متنفس، اپنے کسب کے بدلے رہن ہے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 39,
      "text": "دائیں بازو والوں کے سوا",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 40,
      "text": "جو جنتوں میں ہوں گے وہاں وہ،",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 41,
      "text": "مجرموں سے پوچھیں گے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 42,
      "text": "\"تمہیں کیا چیز دوزخ میں لے گئی؟\"",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 43,
      "text": "وہ کہیں گے \"ہم نماز پڑھنے والوں میں سے نہ تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 44,
      "text": "اور مسکین کو کھانا نہیں کھلاتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 45,
      "text": "اور حق کے خلاف باتیں بنانے والوں کے ساتھ مل کر ہم بھی باتیں بنانے لگتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 46,
      "text": "اور روز جزا کو جھوٹ قرار دیتے تھے",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 47,
      "text": "یہاں تک کہ ہمیں اُس یقینی چیز سے سابقہ پیش آ گیا\"",
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 48,
      "text": "اُس وقت سفارش کرنے والوں کی سفارش ان کے کسی کام نہ آئے گی",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 49,
      "text": "آخر اِن لوگوں کو کیا ہو گیا ہے کہ یہ اِس نصیحت سے منہ موڑ رہے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 50,
      "text": "گویا یہ جنگلی گدھے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 51,
      "text": "جو شیر سے ڈر کر بھاگ پڑے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 52,
      "text": "بلکہ اِن میں سے تو ہر ایک یہ چاہتا ہے کہ اُس کے نام کھلے خط بھیجے جائیں",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 53,
      "text": "ہرگز نہیں، اصل بات یہ ہے کہ یہ آخرت کا خوف نہیں رکھتے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 54,
      "text": "ہرگز نہیں، یہ تو ایک نصیحت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 55,
      "text": "اب جس کا جی چاہے اس سے سبق حاصل کر لے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 56,
      "text": "اور یہ کوئی سبق حاصل نہ کریں گے الا یہ کہ اللہ ہی ایسا چاہے وہ اس کا حق دار ہے کہ اُس سے تقویٰ کیا جائے اور وہ اس کا اہل ہے کہ (تقویٰ کرنے والوں کو) بخش دے",
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    }
  ]
}