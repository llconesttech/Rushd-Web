{
  "number": 69,
  "name": "سُورَةُ الحَاقَّةِ",
  "englishName": "Al-Haaqqa",
  "ayahs": [
    {
      "number": 1,
      "text": "ہونی شدنی!",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 2,
      "text": "کیا ہے وہ ہونی شدنی؟",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 3,
      "text": "اور تم کیا جانو کہ وہ کیا ہے ہونی شدنی؟",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 4,
      "text": "ثمود اور عاد نے اُس اچانک ٹوٹ پڑنے والی آفت کو جھٹلایا",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 5,
      "text": "تو ثمود ایک سخت حادثہ میں ہلاک کیے گئے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 6,
      "text": "اور عاد ایک بڑی شدید طوفانی آندھی سے تباہ کر دیے گئے",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 7,
      "text": "اللہ تعالیٰ نے اُس کو مسلسل سات رات اور آٹھ دن اُن پر مسلط رکھا (تم وہاں ہوتے تو) دیکھتے کہ وہ وہاں اِس طرح پچھڑے پڑے ہیں جیسے وہ کھجور کے بوسیدہ تنے ہوں",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 8,
      "text": "اب کیا اُن میں سے کوئی تمہیں باقی بچا نظر آتا ہے؟",
      "juz": 29,
      "manzil": 7,
      "page": 566,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 9,
      "text": "اور اِسی خطائے عظیم کا ارتکاب فرعون اور اُس سے پہلے کے لوگوں نے اور تل پٹ ہو جانے والی بستیوں نے کیا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 10,
      "text": "ان سب نے اپنے رب کے رسول کی بات نہ مانی تو اُس نے اُن کو بڑی سختی کے ساتھ پکڑا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 11,
      "text": "جب پانی کا طوفان حد سے گزر گیا تو ہم نے تم کو کشتی میں سوار کر دیا تھا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 12,
      "text": "تاکہ اِس واقعہ کو تمہارے لیے ایک سبق آموز یادگار بنا دیں اور یاد رکھنے والے کان اس کی یاد محفوظ رکھیں",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 13,
      "text": "پھر جب ایک دفعہ صور میں پھونک مار دی جائے گی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 14,
      "text": "اور زمین اور پہاڑوں کو اٹھا کر ایک ہی چوٹ میں ریزہ ریزہ کر دیا جائے گا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 15,
      "text": "اُس روز وہ ہونے والا واقعہ پیش آ جائے گا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 16,
      "text": "اُس دن آسمان پھٹے گا اور اس کی بندش ڈھیلی پڑ جائے گی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 17,
      "text": "فرشتے اس کے اطراف و جوانب میں ہوں گے اور آٹھ فرشتے اُس روز تیرے رب کا عرش اپنے اوپر اٹھائے ہوئے ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 18,
      "text": "وہ دن ہوگا جب تم لوگ پیش کیے جاؤ گے، تمہارا کوئی راز بھی چھپا نہ رہ جائے گا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 19,
      "text": "اُس وقت جس کا نامہ اعمال اُس کے سیدھے ہاتھ میں دیا جائے گا وہ کہے گا \"لو دیکھو، پڑھو میرا نامہ اعمال",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 20,
      "text": "میں سمجھتا تھا کہ مجھے ضرور اپنا حساب ملنے والا ہے\"",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 21,
      "text": "پس وہ دل پسند عیش میں ہوگا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 22,
      "text": "عالی مقام جنت میں",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 23,
      "text": "جس کے پھلوں کے گچھے جھکے پڑ رہے ہوں گے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 24,
      "text": "(ایسے لوگوں سے کہا جائے گا) مزے سے کھاؤ اور پیو اپنے اُن اعمال کے بدلے جو تم نے گزرے ہوئے دنوں میں کیے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 25,
      "text": "اور جس کا نامہ اعمال اُس کے بائیں ہاتھ میں دیا جائے گا وہ کہے گا \"کاش میرا اعمال نامہ مجھے نہ دیا گیا ہوتا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 26,
      "text": "اور میں نہ جانتا کہ میرا حساب کیا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 27,
      "text": "کاش میری وہی موت (جو دنیا میں آئی تھی) فیصلہ کن ہوتی",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 28,
      "text": "آج میرا مال میرے کچھ کام نہ آیا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 29,
      "text": "میرا سارا اقتدار ختم ہو گیا\"",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 30,
      "text": "(حکم ہو گا) پکڑو اِسے اور اِس کی گردن میں طوق ڈال دو",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 31,
      "text": "پھر اِسے جہنم میں جھونک دو",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 32,
      "text": "پھر اِس کو ستر ہاتھ لمبی زنجیر میں جکڑ دو",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 33,
      "text": "یہ نہ اللہ بزرگ و برتر پر ایمان لاتا تھا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 34,
      "text": "اور نہ مسکین کو کھانا کھلانے کی ترغیب دیتا تھا",
      "juz": 29,
      "manzil": 7,
      "page": 567,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 35,
      "text": "لہٰذا آج نہ یہاں اِس کا کوئی یار غم خوار ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 36,
      "text": "اور نہ زخموں کے دھوون کے سوا اِس کے لیے کوئی کھانا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 37,
      "text": "جسے خطا کاروں کے سوا کوئی نہیں کھاتا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 500,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 38,
      "text": "پس نہیں، میں قسم کھاتا ہوں اُن چیزوں کی بھی جو تم دیکھتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 39,
      "text": "اور اُن کی بھی جنہیں تم نہیں دیکھتے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 40,
      "text": "یہ ایک رسول کریم کا قول ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 41,
      "text": "کسی شاعر کا قول نہیں ہے، تم لوگ کم ہی ایمان لاتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 42,
      "text": "اور نہ یہ کسی کاہن کا قول ہے، تم لوگ کم ہی غور کرتے ہو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 43,
      "text": "یہ رب العالمین کی طرف سے نازل ہوا ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 44,
      "text": "اور اگر اس (نبی) نے خود گھڑ کر کوئی بات ہماری طرف منسوب کی ہوتی",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 45,
      "text": "تو ہم اِس کا دایاں ہاتھ پکڑ لیتے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 46,
      "text": "اور اِس کی رگ گردن کاٹ ڈالتے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 47,
      "text": "پھر تم میں سے کوئی (ہمیں) اس کام سے روکنے والا نہ ہوتا",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 48,
      "text": "درحقیقت یہ پرہیزگار لوگوں کے لیے ایک نصیحت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 49,
      "text": "اور ہم جانتے ہیں کہ تم میں سے کچھ لوگ جھٹلانے والے ہیں",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 50,
      "text": "ایسے کافروں کے لیے یقیناً یہ موجب حسرت ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 51,
      "text": "اور یہ بالکل یقینی حق ہے",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    },
    {
      "number": 52,
      "text": "پس اے نبیؐ، اپنے رب عظیم کے نام کی تسبیح کرو",
      "juz": 29,
      "manzil": 7,
      "page": 568,
      "ruku": 501,
      "hizbQuarter": 227,
      "sajda": false
    }
  ]
}