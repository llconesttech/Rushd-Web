{"number":81,"edition":"tr.golpinarli","ayahs":[{"number":1,"text":"Güneş dürülünce"},{"number":2,"text":"Ve yıldızlar kararınca"},{"number":3,"text":"Ve dağlar yürütülünce"},{"number":4,"text":"Ve dişi develer bile başı boş bırakılınca"},{"number":5,"text":"Ve vahşi hayvanlar bile bir araya toplanınca"},{"number":6,"text":"Ve denizler, coşup kabarınca"},{"number":7,"text":"Ve insanlar, haldeşleriyle birleşince"},{"number":8,"text":"Diridiri gömülen kıza sorulunca"},{"number":9,"text":"Hangi suç yüzünden öldürüldün diye"},{"number":10,"text":"Ve sahifeler dağılınca"},{"number":11,"text":"Ve göğün perdesi kaldırılınca"},{"number":12,"text":"Ve cehennem alevlendirilince"},{"number":13,"text":"Ve cennet yaklaştırılınca"},{"number":14,"text":"Herkes bilir ne hazırladığını"},{"number":15,"text":"Artık andolsun dönüp kaybolan"},{"number":16,"text":"Doğup yürüyen ve burçlarına giren yıldızlara"},{"number":17,"text":"Ve geçmeye başladığı çağda, geceye"},{"number":18,"text":"Ve ışıdığı çağda, sabaha"},{"number":19,"text":"Şüphe yok ki Kur'an, büyük bir elçinin sözüdür"},{"number":20,"text":"Kuvvetlidir, arş sahibinin katında kadri yüce"},{"number":21,"text":"İtaat edilir, emniyetlidir de"},{"number":22,"text":"Sizinle konuşan, deli değildir"},{"number":23,"text":"Ve andolsun, onu, apaydın tanyerinde gördü"},{"number":24,"text":"Arkadaşınız, gizli şeyler hakkında da nekes değildir"},{"number":25,"text":"Ve Kur'an, taşlanmış Şeytan'ın sözü de değildir"},{"number":26,"text":"Artık nereye gidiyorsunuz öyleyse"},{"number":27,"text":"O, bütün alemlere bir öğüttür ancak"},{"number":28,"text":"Ve hele içinizden doğru hareket etmek isteyene"},{"number":29,"text":"Ve isteyemezsiniz, alemlerin Rabbi Allah istemedikçe"}]}