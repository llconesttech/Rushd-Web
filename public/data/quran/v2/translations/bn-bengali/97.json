{
  "number": 97,
  "name": "سُورَةُ القَدۡرِ",
  "englishName": "Al-Qadr",
  "ayahs": [
    {
      "number": 1,
      "text": "আমি একে নাযিল করেছি শবে-কদরে।",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 539,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 2,
      "text": "শবে-কদর সমন্ধে আপনি কি জানেন?",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 539,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 3,
      "text": "শবে-কদর হল এক হাজার মাস অপেক্ষা শ্রেষ্ঠ।",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 539,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 4,
      "text": "এতে প্রত্যেক কাজের জন্যে ফেরেশতাগণ ও রূহ অবতীর্ণ হয় তাদের পালনকর্তার নির্দেশক্রমে।",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 539,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 5,
      "text": "এটা নিরাপত্তা, যা ফজরের উদয় পর্যন্ত অব্যাহত থাকে।",
      "juz": 30,
      "manzil": 7,
      "page": 598,
      "ruku": 539,
      "hizbQuarter": 239,
      "sajda": false
    }
  ]
}