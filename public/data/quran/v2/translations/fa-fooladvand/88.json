{"number":88,"edition":"fa.fooladvand","ayahs":[{"number":1,"text":"آيا خبر «غاشيه» به تو رسيده است؟"},{"number":2,"text":"در آن روز، چهره‌هايى زبونند،"},{"number":3,"text":"كه تلاش كرده، رنج [بيهوده‌] برده‌اند"},{"number":4,"text":"[ناچار] در آتشى سوزان درآيند"},{"number":5,"text":"از چشمه‌اى داغ نوشانيده شوند"},{"number":6,"text":"خوراكى جز خار خشك ندارند،"},{"number":7,"text":"[كه‌] نه فربه كند، و نه گرسنگى را باز دارد"},{"number":8,"text":"در آن روز، چهره‌هايى شادابند"},{"number":9,"text":"از كوشش خود خشنودند"},{"number":10,"text":"در بهشت برين‌اند"},{"number":11,"text":"سخن بيهوده‌اى در آنجا نشنوند"},{"number":12,"text":"در آن، چشمه‌اى روان باشد"},{"number":13,"text":"تختهايى بلند در آنجاست"},{"number":14,"text":"و قدحهايى نهاده شده"},{"number":15,"text":"و بالشهايى پهلوى هم [چيده‌]"},{"number":16,"text":"و فرشهايى [زربفت‌] گسترده"},{"number":17,"text":"آيا به شتر نمى‌نگرند كه چگونه آفريده شده؟"},{"number":18,"text":"و به آسمان كه چگونه برافراشته شده؟"},{"number":19,"text":"و به كوه‌ها كه چگونه برپا داشته شده؟"},{"number":20,"text":"و به زمين كه چگونه گسترده شده است؟"},{"number":21,"text":"پس تذكر ده كه تو تنها تذكردهنده‌اى"},{"number":22,"text":"بر آنان تسلّطى ندارى،"},{"number":23,"text":"مگر كسى كه روى بگرداند و كفر ورزد،"},{"number":24,"text":"كه خدا او را به آن عذاب بزرگتر عذاب كند"},{"number":25,"text":"در حقيقت، بازگشت آنان به سوى ماست،"},{"number":26,"text":"آنگاه حساب [خواستن از] آنان به عهده ماست"}]}